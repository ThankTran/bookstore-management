<Window x:Class="bookstore_Management.Presentation.Views.Information.InforDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Information"
        mc:Ignorable="d"
        Title="Information" Height="110" Width="260"
        WindowStartupLocation="Manual"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"       
              
>
    <Window.Resources>
        <Style TargetType="Border" x:Key="btnXClicked">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DE7E9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DE7E9E"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#F9ECF1"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#5858B5">
        <Grid Margin="0,0,0,180">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="0,0,0,-104" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Information"
                        Margin="70,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                        FontSize="20"
                        Foreground="#DE7E9E" Width="125"/>
                    <Border Style="{StaticResource btnXClicked}"
                            Width="20" Height="20"
                            Margin="30,0,0,0"
                            MouseLeftButtonDown="BtnClose_Click">
                        <TextBlock Text="X"
                                   FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/> 
                    </Border>
                </StackPanel>
                <Grid Height="128">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Version: "
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                               FontSize="8"
                               Foreground="#DE7E9E"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="Tên sản phẩm: "
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                               FontSize="8"
                               Foreground="#DE7E9E"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="Nhóm phát triển: "
                               Grid.Row="3"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                               FontSize="8"
                               Foreground="#DE7E9E"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="1.0 "
                                Grid.Column="1"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                FontSize="8"
                                Foreground="#5858B5"
                                Margin="0,5,0,0"/>
                    <TextBlock Text="Phần mềm Quản lý Nhà Sách (for window OS) "
                                 Grid.Column="1"
                                 Grid.Row="2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Bottom"
                                 FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                 FontSize="8"
                                 Foreground="#5858B5" Grid.ColumnSpan="2"/>
                    <TextBlock Text="Trần Thị Hồng Thanh "
                                 Grid.Column="1"
                                 Grid.Row="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                 FontSize="8"
                                 Foreground="#7F81E5"
                                 Margin="0,5,0,0"/>
                    <TextBlock Text="Phạm Hoàng Gia Hiển "
                                 Grid.Column="1"
                                 Grid.Row="4"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                 FontSize="8"
                                 Foreground="#7F81E5"
                                 Margin="0,5,0,0"/>
                    <TextBlock Text="Nguyễn Ái My"
                                 Grid.Column="1"
                                 Grid.Row="5"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontFamily="/Presentation/AppResources/Fonts/Quicksand-Bold.ttf#Quicksand"
                                 FontSize="8"
                                 Foreground="#7F81E5"
                                 Margin="0,5,0,0"/>

                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>