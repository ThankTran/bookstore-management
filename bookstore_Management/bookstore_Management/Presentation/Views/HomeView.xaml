<UserControl x:Class="bookstore_Management.Presentation.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#585AB8" Offset="0"/>
            <GradientStop Color="#7577C3" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4CAF50" Offset="0"/>
            <GradientStop Color="#66BB6A" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9800" Offset="0"/>
            <GradientStop Color="#FFB74D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F44336" Offset="0"/>
            <GradientStop Color="#EF5350" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2196F3" Offset="0"/>
            <GradientStop Color="#42A5F5" Offset="1"/>
        </LinearGradientBrush>

        <!-- Animation Storyboards -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"
                           AccelerationRatio="0.2" DecelerationRatio="0.8"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="30" To="0" Duration="0:0:0.8"
                           AccelerationRatio="0.2" DecelerationRatio="0.8"/>
        </Storyboard>

        <!-- Card Hover Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" 
                                    ShadowDepth="5" Opacity="0.1" Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                                               To="10" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.Opacity)"
                                               To="0.2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.ShadowDepth)"
                                               To="5" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.Opacity)"
                                               To="0.1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Container Style -->
        <Style x:Key="IconContainer" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" 
                                    ShadowDepth="3" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0,0,10,0">
        <Grid Margin="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Welcome Header with Gradient Background -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryGradient}"
                    CornerRadius="25"
                    Padding="40,35"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect Color="#585AB8" BlurRadius="30" 
                                    ShadowDepth="8" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Chào mừng trở lại! 👋"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" 
                                                ShadowDepth="2" Opacity="0.3"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Hệ thống quản lý nhà sách THM"
                                   FontSize="16"
                                   Foreground="White"
                                   Opacity="0.9"
                                   FontWeight="SemiBold"/>
                        <TextBlock FontSize="14"
                                   Foreground="White"
                                   Opacity="0.8"
                                   Margin="0,5,0,0">
                            <Run Text="📅"/>
                            <Run Text="{Binding CurrentDate, StringFormat='dd/MM/yyyy - HH:mm'}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Decorative Circle -->
                    <Ellipse Width="200" Height="200"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center"
                             Margin="0,0,-80,0"
                             Opacity="0.1">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </Border>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Revenue Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <Border Style="{StaticResource IconContainer}"
                                Background="{StaticResource SuccessGradient}">
                            <TextBlock Text="💰" 
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Doanh thu hôm nay"
                                   FontSize="13"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,8"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="12,500,000 ₫"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <Border Background="#E8F5E9"
                                CornerRadius="10"
                                Padding="8,4"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▲" 
                                           FontSize="10"
                                           Foreground="#4CAF50"
                                           Margin="0,0,3,0"/>
                                <TextBlock Text="15.5%"
                                           FontSize="11"
                                           Foreground="#4CAF50"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Total Orders Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <Border Style="{StaticResource IconContainer}"
                                Background="{StaticResource InfoGradient}">
                            <TextBlock Text="📦" 
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Đơn hàng hôm nay"
                                   FontSize="13"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,8"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="156"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"/>
                        <Border Background="#E3F2FD"
                                CornerRadius="10"
                                Padding="8,4"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▲" 
                                           FontSize="10"
                                           Foreground="#2196F3"
                                           Margin="0,0,3,0"/>
                                <TextBlock Text="8.2%"
                                           FontSize="11"
                                           Foreground="#2196F3"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Total Customers Card -->
                <Border Grid.Column="4" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <Border Style="{StaticResource IconContainer}"
                                Background="{StaticResource WarningGradient}">
                            <TextBlock Text="👥" 
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Khách hàng mới"
                                   FontSize="13"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,8"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="24"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"/>
                        <Border Background="#FFF3E0"
                                CornerRadius="10"
                                Padding="8,4"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▲" 
                                           FontSize="10"
                                           Foreground="#FF9800"
                                           Margin="0,0,3,0"/>
                                <TextBlock Text="12.3%"
                                           FontSize="11"
                                           Foreground="#FF9800"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Low Stock Alert Card -->
                <Border Grid.Column="6" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <Border Style="{StaticResource IconContainer}"
                                Background="{StaticResource DangerGradient}">
                            <TextBlock Text="⚠️" 
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Sách sắp hết"
                                   FontSize="13"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,8"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="18"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#F44336"
                                   HorizontalAlignment="Center"/>
                        <Border Background="#FFEBEE"
                                CornerRadius="10"
                                Padding="8,4"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                            <TextBlock Text="Cần nhập hàng"
                                       FontSize="10"
                                       Foreground="#F44336"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Grid Grid.Row="2" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Orders -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="20"
                        Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="20" 
                                        ShadowDepth="5" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#E3F2FD"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Đơn hàng gần đây"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Xem tất cả →"
                                       FontSize="12"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Cursor="Hand"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Order Items -->
                        <StackPanel>
                            <!-- Order 1 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource InfoGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="📦" 
                                                   FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="HD2025001"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Nguyễn Văn A • 10:30 AM"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="2,450,000 ₫"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Order 2 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource SuccessGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="📦" 
                                                   FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="HD2025002"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Trần Thị B • 09:15 AM"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="1,200,000 ₫"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Order 3 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource WarningGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="📦" 
                                                   FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="HD2025003"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Lê Văn C • 08:45 AM"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="850,000 ₫"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Best Sellers -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="20"
                        Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="20" 
                                        ShadowDepth="5" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FFF3E0"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="🏆" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Sách bán chạy"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Top 3 tuần này"
                                       FontSize="12"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Bestseller Items -->
                        <StackPanel>
                            <!-- Book 1 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource WarningGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="1" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Đắc Nhân Tâm"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="245 cuốn đã bán"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="2"
                                            Background="#FFF3E0"
                                            CornerRadius="8"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="🔥"
                                                   FontSize="14"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Book 2 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource InfoGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="2" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Sapiens"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="198 cuốn đã bán"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="2"
                                            Background="#E3F2FD"
                                            CornerRadius="8"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="⭐"
                                                   FontSize="14"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Book 3 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="12"
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="{StaticResource SuccessGradient}"
                                            CornerRadius="8"
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="3" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Nhà Giả Kim"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <TextBlock Text="167 cuốn đã bán"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="2"
                                            Background="#E8F5E9"
                                            CornerRadius="8"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="📚"
                                                   FontSize="14"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Action Buttons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
