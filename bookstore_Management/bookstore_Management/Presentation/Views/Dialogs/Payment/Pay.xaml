<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Payment.Pay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hóa đơn thanh toán"
        Height="800" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="BillTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <Style x:Key="BillHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource BillTextStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="BillTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2196F3"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="🧾"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Hóa đơn thanh toán"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Chi tiết và in hóa đơn"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#42A5F5"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Bill Content (Printable Area) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="0">

                <!-- This is the printable content -->
                <Border x:Name="printableArea"
                        Background="White"
                        Padding="40,30">
                    <StackPanel>

                        <!-- Store Info -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="NHÀ SÁCH ABC"
                                       Style="{StaticResource BillTitleStyle}"
                                       FontSize="28"/>
                            <TextBlock Text="123 Đường ABC, Quận XYZ, TP.HCM"
                                       Style="{StaticResource BillTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Hotline: 0123-456-789"
                                       Style="{StaticResource BillTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,3,0,0"/>
                        </StackPanel>

                        <Border Height="2" Background="#E0E0E0" Margin="0,0,0,20"/>

                        <!-- Bill Title -->
                        <TextBlock Text="HÓA ĐƠN BÁN HÀNG"
                                   Style="{StaticResource BillTitleStyle}"
                                   Margin="0,0,0,20"/>

                        <!-- Bill Info -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Mã hóa đơn: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbBillId"
                                               Text="HD0001"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Nhân viên: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbStaffName"
                                               Text="Nguyễn Văn A"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Khách hàng: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbCustomerName"
                                               Text="Khách vãng lai"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Ngày: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbDate"
                                               Text="19/01/2026"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Giờ: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbTime"
                                               Text="14:30"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Thanh toán: "
                                               Style="{StaticResource BillHeaderStyle}"
                                               Width="120"/>
                                    <TextBlock x:Name="tbPaymentMethod"
                                               Text="Tiền mặt"
                                               Style="{StaticResource BillTextStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Border Height="1" Background="#E0E0E0" Margin="0,0,0,15"/>

                        <!-- Items Header -->
                        <Grid Margin="0,0,0,10"
                              Background="#F8F9FA"
                              Height="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="STT"
                                       Style="{StaticResource BillHeaderStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Text="Tên sách"
                                       Style="{StaticResource BillHeaderStyle}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="SL"
                                       Style="{StaticResource BillHeaderStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" 
                                       Text="Đơn giá"
                                       Style="{StaticResource BillHeaderStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="4" 
                                       Text="Thành tiền"
                                       Style="{StaticResource BillHeaderStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,0"/>
                        </Grid>

                        <!-- Items List -->
                        <ItemsControl x:Name="icItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8" MinHeight="30">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding STT}"
                                                   Style="{StaticResource BillTextStyle}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding BookName}"
                                                   Style="{StaticResource BillTextStyle}"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="10,0,0,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Quantity}"
                                                   Style="{StaticResource BillTextStyle}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding UnitPrice, StringFormat={}{0:N0}}"
                                                   Style="{StaticResource BillTextStyle}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding Subtotal, StringFormat={}{0:N0}}"
                                                   Style="{StaticResource BillTextStyle}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,10,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Height="1" Background="#E0E0E0" Margin="0,15,0,15"/>

                        <!-- Summary -->
                        <StackPanel HorizontalAlignment="Right" MinWidth="300">
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Tạm tính:"
                                           Style="{StaticResource BillTextStyle}"/>
                                <TextBlock x:Name="tbSubtotal"
                                           Text="0 ₫"
                                           Style="{StaticResource BillTextStyle}"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Giảm giá:"
                                           Style="{StaticResource BillTextStyle}"/>
                                <TextBlock x:Name="tbDiscount"
                                           Text="0 ₫"
                                           Style="{StaticResource BillTextStyle}"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Border Height="1" Background="#E0E0E0" Margin="0,8,0,12"/>

                            <Grid>
                                <TextBlock Text="TỔNG CỘNG:"
                                           Style="{StaticResource BillHeaderStyle}"
                                           FontSize="16"
                                           Foreground="#2196F3"/>
                                <TextBlock x:Name="tbTotal"
                                           Text="0 ₫"
                                           Style="{StaticResource BillHeaderStyle}"
                                           FontSize="18"
                                           Foreground="#2196F3"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <TextBlock x:Name="tbTotalInWords"
                                       Text="(Bằng chữ: Không đồng)"
                                       Style="{StaticResource BillTextStyle}"
                                       FontStyle="Italic"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Notes -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock x:Name="tbNotes"
                                       Text=""
                                       Style="{StaticResource BillTextStyle}"
                                       TextWrapping="Wrap"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Footer -->
                        <StackPanel Margin="0,30,0,0">
                            <TextBlock Text="Cảm ơn quý khách đã mua hàng!"
                                       Style="{StaticResource BillHeaderStyle}"
                                       HorizontalAlignment="Center"
                                       Foreground="#2196F3"/>
                            <TextBlock Text="Hẹn gặp lại!"
                                       Style="{StaticResource BillTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Signature Area -->
                        <Grid Margin="0,40,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Khách hàng"
                                           Style="{StaticResource BillHeaderStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="(Ký, ghi rõ họ tên)"
                                           Style="{StaticResource BillTextStyle}"
                                           FontSize="11"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Nhân viên bán hàng"
                                           Style="{StaticResource BillHeaderStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="(Ký, ghi rõ họ tên)"
                                           Style="{StaticResource BillTextStyle}"
                                           FontSize="11"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="💡" FontSize="13" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Bấm In để in hóa đơn này" 
                                   FontSize="12"
                                   Foreground="#999999" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Close Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnClose_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Đóng" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Print Button -->
                        <Border Background="#4CAF50" CornerRadius="10" Padding="25,10" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#4CAF50" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnPrint_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖨" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="In hóa đơn" FontSize="13" FontWeight="Bold" 
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>