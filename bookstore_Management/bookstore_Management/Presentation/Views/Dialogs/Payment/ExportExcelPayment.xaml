<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Payment.ExportExcelPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Payment"
        mc:Ignorable="d"
        Height="520" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Input Border Style -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF5252"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ExportCheckBox" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" 
            Background="White" 
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            BlurRadius="30" 
                            ShadowDepth="8" 
                            Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#FF5252"
                    CornerRadius="20,20,0,0"
                    Padding="30,20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="📥" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Xuất hóa đơn thanh toán" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Chọn định dạng và thông tin cần xuất" 
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Border Background="#D32F2F"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Định dạng file -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Định dạng file *" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <ComboBox x:Name="cbFileFormat"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      FontSize="13"
                                      FontFamily="{StaticResource PrimaryFont}"
                                      SelectionChanged="cbFileFormat_SelectionChanged">
                                <ComboBoxItem Content="Excel (.xlsx)" IsSelected="True" Tag="xlsx"/>
                                <ComboBoxItem Content="CSV (.csv)" Tag="csv"/>
                                <ComboBoxItem Content="PDF (.pdf)" Tag="pdf"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <!-- Chọn thông tin xuất -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="📋" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Chọn thông tin xuất" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#FF5252"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Checkbox chọn tất cả -->
                            <CheckBox x:Name="chkSelectAll"
                                      Content="Chọn tất cả"
                                      FontFamily="{StaticResource PrimaryFont}"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF5252"
                                      Margin="0,0,0,10"
                                      Checked="chkSelectAll_Checked"
                                      Unchecked="chkSelectAll_Unchecked"/>

                            <Border Height="1" Background="#E0E0E0" Margin="0,0,0,10"/>

                            <!-- Danh sách các trường -->
                            <StackPanel x:Name="pnlColumns">
                                <CheckBox x:Name="chkOrderId" 
                                          Content="Mã đơn hàng" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkOrderDate" 
                                          Content="Ngày tạo đơn" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkStaffName" 
                                          Content="Nhân viên" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkCustomerName" 
                                          Content="Khách hàng" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkPaymentMethod" 
                                          Content="Phương thức thanh toán" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkDiscount" 
                                          Content="Giảm giá" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkTotalPrice" 
                                          Content="Tổng tiền" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkOrderDetails" 
                                          Content="Chi tiết sản phẩm" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="True"/>
                                <CheckBox x:Name="chkNotes" 
                                          Content="Ghi chú" 
                                          Style="{StaticResource ExportCheckBox}"
                                          IsChecked="False"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Thông tin đơn hàng -->
                    <Border Background="#FFEBEE"
                            CornerRadius="12"
                            Padding="15"
                            BorderBrush="#FF5252"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#D32F2F"
                                       TextWrapping="Wrap"
                                       LineHeight="18">
                                <Run Text="📌 Thông tin đơn hàng:"/>
                                <LineBreak/>
                                <Run Text="• Mã đơn: "/>
                                <Run x:Name="txtOrderId" Text="HD0001" FontWeight="SemiBold"/>
                                <LineBreak/>
                                <Run Text="• Tổng tiền: "/>
                                <Run x:Name="txtTotal" Text="0 ₫" FontWeight="SemiBold"/>
                                <LineBreak/>
                                <Run Text="• File sẽ được lưu tại thư mục Downloads"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!-- Cancel Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" 
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Export Button -->
                        <Border Background="#FF5252"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF5252" 
                                                BlurRadius="15" 
                                                ShadowDepth="3" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnExport_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📥" 
                                               FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Xuất file"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>