<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Payment.PrintPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Payment"
        mc:Ignorable="d"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="20" 
            Background="White" 
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            BlurRadius="30" 
                            ShadowDepth="8" 
                            Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#FF5252"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="🧾" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="In Hóa Đơn Thanh Toán" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Cấu hình in và xem trước hóa đơn" 
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Border Background="#D32F2F"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Preview Section -->
                    <TextBlock Text="📋 Xem Trước Hóa Đơn"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#FF5252"
                               Margin="0,0,0,10"/>

                    <Border Background="#F8F9FA"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,20"
                            Height="200">
                        <Grid>
                            <TextBlock Text="📄 Hóa đơn sẽ hiển thị ở đây"
                                       FontSize="13"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <Border x:Name="PreviewContainer"
                                    Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Visibility="Collapsed">
                                <FlowDocumentScrollViewer x:Name="DocPreview"
                                                          VerticalScrollBarVisibility="Auto"
                                                          IsToolBarVisible="False"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Print Settings -->
                    <TextBlock Text="⚙️ Cấu Hình In"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#FF5252"
                               Margin="0,0,0,15"/>

                    <!-- Paper Size -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Khổ giấy"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <Border CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White">
                            <ComboBox x:Name="cbPaperSize"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Padding="12,8"
                                      FontSize="13">
                                <ComboBoxItem Content="A4 (210 × 297mm)" IsSelected="True"/>
                                <ComboBoxItem Content="A5 (148 × 210mm)"/>
                                <ComboBoxItem Content="Hóa đơn nhiệt (80mm)"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <!-- Number of Copies -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Số bản in"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <Border CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White"
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="−"
                                        FontSize="18"
                                        Width="30" Height="30"
                                        Background="#F5F5F5"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnDecrease_Click"/>
                                <TextBox Grid.Column="1"
                                         x:Name="txtCopies"
                                         Text="1"
                                         TextAlignment="Center"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         VerticalContentAlignment="Center"
                                         Margin="10,0"
                                         PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                <Button Grid.Column="2"
                                        Content="+"
                                        FontSize="18"
                                        Width="30" Height="30"
                                        Background="#FF5252"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnIncrease_Click"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Print Options -->
                    <Border Background="#F8F9FA"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox x:Name="chkPrintCustomerCopy"
                                      Content="In bản khách hàng"
                                      IsChecked="True"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                            <CheckBox x:Name="chkPrintStoreCopy"
                                      Content="In bản lưu trữ"
                                      IsChecked="True"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                            <CheckBox x:Name="chkShowDetails"
                                      Content="Hiển thị chi tiết sản phẩm"
                                      IsChecked="True"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                            <CheckBox x:Name="chkSavePDF"
                                      Content="Tự động lưu bản PDF"
                                      IsChecked="True"
                                      FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Order Info -->
                    <Border Background="#FFEBEE"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="📌 Thông tin đơn hàng"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#D32F2F"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="Mã đơn: "
                                           FontSize="11"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="txtOrderId"
                                           Text="HD0001"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#D32F2F"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="Tổng tiền: "
                                           FontSize="11"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="txtTotal"
                                           Text="0 ₫"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#D32F2F"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="Ngày tạo: "
                                           FontSize="11"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="txtDate"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#D32F2F"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!-- Preview Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#FF5252"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnPreview_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👁️" 
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Xem trước"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#FF5252"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Print Button -->
                        <Border Background="#FF5252"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF5252" 
                                                BlurRadius="15" 
                                                ShadowDepth="3" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnPrint_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖨️" 
                                               FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="In hóa đơn"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>