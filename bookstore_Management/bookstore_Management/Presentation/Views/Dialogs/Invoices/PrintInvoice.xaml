<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Invoices.PrintInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Invoices"
        mc:Ignorable="d"
        Title="In Hóa Đơn"
        Height="750" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="OptionButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#9C27B0"/>
                    <Setter Property="Background" Value="#F3E5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CheckboxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#9C27B0"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="🖨"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="In hóa đơn"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock x:Name="tbInvoiceInfo"
                                       Text="Chọn cài đặt in cho hóa đơn"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#AB47BC"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Settings -->
                    <StackPanel Grid.Column="0">
                        <!-- Print Options -->
                        <Border Background="#F8F9FA"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="⚙️ Tùy chọn in"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#9C27B0"
                                           Margin="0,0,0,15"/>

                                <!-- Printer Selection -->
                                <TextBlock Text="Máy in:"
                                           FontSize="13"
                                           Foreground="#666666"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="cbPrinter"
                                          Margin="0,0,0,15"
                                          Padding="10,8"
                                          FontSize="13"
                                          SelectionChanged="CbPrinter_SelectionChanged"/>

                                <!-- Paper Size -->
                                <TextBlock Text="Khổ giấy:"
                                           FontSize="13"
                                           Foreground="#666666"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="cbPaperSize"
                                          SelectedIndex="0"
                                          Margin="0,0,0,15"
                                          Padding="10,8"
                                          FontSize="13">
                                    <ComboBoxItem Content="📄 A4 (210 x 297 mm)"/>
                                    <ComboBoxItem Content="📄 A5 (148 x 210 mm)"/>
                                    <ComboBoxItem Content="📄 K80 (80mm - Bill nhiệt)"/>
                                    <ComboBoxItem Content="📄 Letter (216 x 279 mm)"/>
                                </ComboBox>

                                <!-- Orientation -->
                                <TextBlock Text="Hướng giấy:"
                                           FontSize="13"
                                           Foreground="#666666"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="cbOrientation"
                                          SelectedIndex="0"
                                          Margin="0,0,0,15"
                                          Padding="10,8"
                                          FontSize="13">
                                    <ComboBoxItem Content="📄 Dọc (Portrait)"/>
                                    <ComboBoxItem Content="📄 Ngang (Landscape)"/>
                                </ComboBox>

                                <!-- Copies -->
                                <Grid Margin="0,0,0,15">
                                    <TextBlock Text="Số bản in:"
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <Button Content="−"
                                                Width="30" Height="30"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Background="#F5F5F5"
                                                BorderThickness="1"
                                                BorderBrush="#E0E0E0"
                                                Cursor="Hand"
                                                Click="BtnDecreaseCopies_Click"/>
                                        <TextBox x:Name="tbCopies"
                                                 Text="1"
                                                 Width="60"
                                                 TextAlignment="Center"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"
                                                 Margin="10,0"
                                                 VerticalContentAlignment="Center"
                                                 PreviewTextInput="NumericOnly_PreviewTextInput"/>
                                        <Button Content="+"
                                                Width="30" Height="30"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Background="#F5F5F5"
                                                BorderThickness="1"
                                                BorderBrush="#E0E0E0"
                                                Cursor="Hand"
                                                Click="BtnIncreaseCopies_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Display Options -->
                        <Border Background="#F8F9FA"
                                CornerRadius="12"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="📋 Hiển thị trên hóa đơn"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#9C27B0"
                                           Margin="0,0,0,15"/>

                                <CheckBox x:Name="chkShowLogo"
                                          Content="Hiển thị logo nhà sách"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>

                                <CheckBox x:Name="chkShowCompanyInfo"
                                          Content="Hiển thị thông tin nhà sách"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>

                                <CheckBox x:Name="chkShowBarcode"
                                          Content="In mã vạch hóa đơn"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>

                                <CheckBox x:Name="chkShowNotes"
                                          Content="Hiển thị ghi chú"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>

                                <CheckBox x:Name="chkShowSignature"
                                          Content="Chữ ký xác nhận"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>

                                <CheckBox x:Name="chkShowDetailedPrice"
                                          Content="Hiển thị giá chi tiết từng sản phẩm"
                                          IsChecked="True"
                                          Style="{StaticResource CheckboxStyle}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right: Preview -->
                    <Border Grid.Column="2"
                            Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="👁 Xem trước"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"
                                       Margin="0,0,0,15"/>

                            <!-- Preview Container -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Padding="15"
                                    MaxHeight="450">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="previewContainer">
                                        <!-- Preview content will be generated dynamically -->

                                        <!-- Logo -->
                                        <Border x:Name="previewLogo"
                                                Visibility="Visible"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Center">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="📚"
                                                           FontSize="36"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="NHÀ SÁCH THM"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Company Info -->
                                        <StackPanel x:Name="previewCompanyInfo"
                                                    Visibility="Visible"
                                                    Margin="0,0,0,15"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="Địa chỉ: 123 Đường ABC, Quận 1, TP.HCM"
                                                       FontSize="10"
                                                       Foreground="#666666"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Điện thoại: 0123.456.789"
                                                       FontSize="10"
                                                       Foreground="#666666"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Invoice Title -->
                                        <TextBlock x:Name="tbPreviewTitle"
                                                   Text="HÓA ĐƠN BÁN HÀNG"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#9C27B0"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>

                                        <!-- Invoice Info -->
                                        <StackPanel Margin="0,0,0,15">
                                            <Grid Margin="0,2">
                                                <TextBlock Text="Mã HĐ:" FontSize="10" Foreground="#666666"/>
                                                <TextBlock x:Name="tbPreviewId"
                                                           Text="HD001"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                            <Grid Margin="0,2">
                                                <TextBlock Text="Ngày:" FontSize="10" Foreground="#666666"/>
                                                <TextBlock x:Name="tbPreviewDate"
                                                           Text="01/01/2024"
                                                           FontSize="10"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                            <Grid Margin="0,2">
                                                <TextBlock Text="Khách hàng:" FontSize="10" Foreground="#666666"/>
                                                <TextBlock x:Name="tbPreviewCustomer"
                                                           Text="Khách vãng lai"
                                                           FontSize="10"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Items -->
                                        <Border BorderBrush="#E0E0E0"
                                                BorderThickness="0,1,0,1"
                                                Padding="0,10"
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,5">
                                                    <TextBlock Text="Sản phẩm"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"/>
                                                    <TextBlock Text="Số lượng"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Thành tiền"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="#666666"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                                <Grid Margin="0,0,0,5">
                                                    <TextBlock Text="Sách mẫu 1"
                                                               FontSize="9"
                                                               Margin="0,3"/>
                                                    <TextBlock Text="x2"
                                                               FontSize="9"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,3"/>
                                                    <TextBlock Text="50,000₫"
                                                               FontSize="9"
                                                               HorizontalAlignment="Right"
                                                               Margin="0,3"/>
                                                </Grid>
                                                <Grid Margin="0,0,0,5">
                                                    <TextBlock Text="Sách mẫu 1"
                                                               FontSize="9"
                                                               Margin="0,3"/>
                                                    <TextBlock Text="x2"
                                                               FontSize="9"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,3"/>
                                                    <TextBlock Text="50,000₫"
                                                               FontSize="9"
                                                               HorizontalAlignment="Right"
                                                               Margin="0,3"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>

                                        <!-- Total -->
                                        <Grid Margin="0,0,0,15">
                                            <TextBlock Text="TỔNG CỘNG:"
                                                       FontSize="12"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text="80,000₫"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="#9C27B0"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>

                                        <!-- Barcode -->
                                        <Border x:Name="previewBarcode"
                                                Visibility="Visible"
                                                Background="#F5F5F5"
                                                Height="40"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="|||  HD001  |||"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="#333333"/>
                                        </Border>

                                        <!-- Notes -->
                                        <Border x:Name="previewNotes"
                                                Visibility="Visible"
                                                Background="#FFF9E6"
                                                CornerRadius="5"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="Ghi chú: Cảm ơn quý khách!"
                                                       FontSize="9"
                                                       Foreground="#666666"
                                                       TextWrapping="Wrap"/>
                                        </Border>

                                        <!-- Signature -->
                                        <Grid x:Name="previewSignature"
                                              Visibility="Visible"
                                              Margin="0,10,0,0">
                                            <StackPanel HorizontalAlignment="Left">
                                                <TextBlock Text="Khách hàng"
                                                           FontSize="9"
                                                           Foreground="#666666"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="(Ký, ghi rõ họ tên)"
                                                           FontSize="8"
                                                           Foreground="#999999"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,20,0,0"/>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Right">
                                                <TextBlock Text="Người bán"
                                                           FontSize="9"
                                                           Foreground="#666666"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="(Ký, ghi rõ họ tên)"
                                                           FontSize="8"
                                                           Foreground="#999999"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,20,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>

                            <!-- Scale Preview -->
                            <TextBlock Text="⚠️ Đây là bản xem trước thu nhỏ"
                                       FontSize="10"
                                       Foreground="#999999"
                                       FontStyle="Italic"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="💡" FontSize="13" Margin="0,0,5,0"/>
                        <TextBlock Text="Nhấn Xem trước để kiểm tra trước khi in"
                                   FontSize="12"
                                   Foreground="#999999"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Preview Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnPreview_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👁" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Xem trước" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Save PDF Button -->
                        <Border Background="#FF9800"
                                CornerRadius="10"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnSavePDF_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💾" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Lưu PDF" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Print Button -->
                        <Border Background="#9C27B0" CornerRadius="10" Padding="25,10" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#9C27B0" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnPrint_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖨" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="In hóa đơn" FontSize="13" FontWeight="Bold" 
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>