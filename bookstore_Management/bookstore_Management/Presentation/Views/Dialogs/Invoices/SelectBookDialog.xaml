<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Invoices.SelectBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Invoices"
        mc:Ignorable="d"
        Title="SelectBookDialog"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White"
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              BlurRadius="30"
                              ShadowDepth="8"
                              Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#4CAF50"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="📖"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chọn sách nhập hàng"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Chọn sách và nhập số lượng, giá nhập"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#66BB6A"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1" Padding="30,20,30,0">
                <Border Style="{StaticResource InputBorderStyle}">
                    <Grid>
                        <TextBox x:Name="tbSearch"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 TextChanged="TbSearch_TextChanged"/>

                        <TextBlock Text="🔍 Tìm kiếm sách (theo tên hoặc mã)..."
                                   FontSize="13"
                                   Foreground="#999999"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=tbSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Border>

            <!-- Books List -->
            <Border Grid.Row="2" Margin="30,20,30,0">
                <Border Background="White"
                        CornerRadius="12"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="icBooks">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="0,0,0,1"
                                                Padding="15,12"
                                                Cursor="Hand"
                                                MouseEnter="BookItem_MouseEnter"
                                                MouseLeave="BookItem_MouseLeave"
                                                MouseLeftButtonDown="BookItem_Click"
                                                Tag="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding BookId}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           Foreground="#4CAF50"
                                                           VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="13"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Author}"
                                                               FontSize="11"
                                                               Foreground="#999999"
                                                               Margin="0,2,0,0"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Category}"
                                                           FontSize="12"
                                                           Foreground="#666666"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"/>

                                                <Border Grid.Column="3"
                                                        Background="#E8F5E9"
                                                        CornerRadius="5"
                                                        Padding="8,4"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Chọn ➜"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="#4CAF50"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State -->
                        <StackPanel x:Name="pnlEmpty"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed">
                            <TextBlock Text="📚"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Opacity="0.3"/>
                            <TextBlock Text="Không tìm thấy sách nào"
                                       FontSize="14"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <!-- Input Section -->
            <Border Grid.Row="3" Padding="30,20,30,0">
                <Border Background="#F8F9FA"
                        CornerRadius="12"
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Số lượng nhập *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <TextBox x:Name="tbQuantity"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         Text="1"
                                         TextAlignment="Center"
                                         PreviewTextInput="NumericOnly_PreviewTextInput"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Giá nhập (₫) *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Grid>
                                    <TextBox x:Name="tbImportPrice"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             TextAlignment="Right"
                                             PreviewTextInput="NumericOnly_PreviewTextInput"/>
                                    <TextBlock Text="₫"
                                               FontSize="13"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <!-- Footer Actions -->
            <Border Grid.Row="4"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0"
                    Margin="0,20,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                        <TextBlock Text="📌 Sách đã chọn: "
                                   FontSize="13"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="tbSelectedBook"
                                   Text="Chưa chọn"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4CAF50"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕"
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <Border Background="#4CAF50"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#4CAF50"
                                                  BlurRadius="15"
                                                  ShadowDepth="3"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <Button x:Name="btnAdd"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnAdd_Click"
                                    IsEnabled="False"
                                    Background="#4CAF50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Thêm vào danh sách"
                                               Foreground="White"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
