<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Invoices.EditImportBillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa Phiếu Nhập"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#FF9800"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="✏️"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Sửa phiếu nhập hàng"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock x:Name="tbSubtitle"
                                       Text="Chỉnh sửa thông tin phiếu nhập"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#FFB74D"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Info Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Mã phiếu nhập (Read-only) -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã phiếu nhập" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}" Background="#F5F5F5">
                                <Grid>
                                    <TextBox x:Name="tbImportId"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             IsReadOnly="True"
                                             Foreground="#999999"
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="🔒"
                                               FontSize="14"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Người tạo (Read-only) -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Người tạo phiếu" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}" Background="#F5F5F5">
                                <TextBox x:Name="tbCreatedBy"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsReadOnly="True"
                                         Foreground="#666666"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Ngày tạo (Read-only) -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Ngày tạo phiếu" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}" Background="#F5F5F5">
                            <TextBox x:Name="tbCreatedDate"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     IsReadOnly="True"
                                     Foreground="#666666"/>
                        </Border>
                    </StackPanel>

                    <!-- Ghi chú (Editable) -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Ghi chú" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}" Height="60">
                            <TextBox x:Name="tbNotes"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"
                                     Padding="0,5"/>
                        </Border>
                    </StackPanel>

                    <!-- Danh sách sách nhập -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="📚 Danh sách sách trong phiếu"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"/>

                                <TextBlock Text="⚠️ Có thể sửa số lượng và giá nhập"
                                           FontSize="11"
                                           Foreground="#F57C00"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Books List -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    MaxHeight="250">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="icBooks">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="15,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="350"/>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="140"/>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding BookName}"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="13"/>
                                                            <TextBlock Text="{Binding BookId}"
                                                                       FontSize="11"
                                                                       Foreground="#999999"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <!-- Quantity (Editable) -->
                                                        <TextBox Grid.Column="1"
                                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                                 BorderBrush="#E0E0E0"
                                                                 BorderThickness="1"
                                                                 Padding="8,5"
                                                                 FontSize="13"
                                                                 TextAlignment="Center"
                                                                 Margin="0,0,10,0"
                                                                 PreviewTextInput="NumericOnly_PreviewTextInput"/>

                                                        <!-- Import Price (Editable) -->
                                                        <TextBox Grid.Column="2"
                                                                 Text="{Binding ImportPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                                                 BorderBrush="#E0E0E0"
                                                                 BorderThickness="1"
                                                                 Padding="8,5"
                                                                 FontSize="13"
                                                                 TextAlignment="Right"
                                                                 Margin="0,0,10,0"
                                                                 PreviewTextInput="NumericOnly_PreviewTextInput"/>

                                                        <TextBlock Grid.Column="3"
                                                                   Text="{Binding Subtotal, StringFormat={}{0:N0} ₫}"
                                                                   FontWeight="Bold"
                                                                   FontSize="13"
                                                                   Foreground="#FF9800"
                                                                   VerticalAlignment="Center"
                                                                   TextAlignment="Right"/>

                                                        <Button Grid.Column="4"
                                                                Content="🗑"
                                                                FontSize="16"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                ToolTip="Xóa sách"
                                                                Margin="10,0,0,0"
                                                                Click="BtnRemoveBook_Click"
                                                                Tag="{Binding}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>

                            <!-- Total -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="8"
                                    Padding="15,10"
                                    Margin="0,15,0,0">
                                <Grid>
                                    <TextBlock Text="Tổng tiền nhập:"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#F57C00"
                                               VerticalAlignment="Center"/>

                                    <TextBlock x:Name="tbTotalAmount"
                                               Text="0 ₫"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#F57C00"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="⚠️" Foreground="#FF9800" FontSize="13"
                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Không thể thay đổi nhà xuất bản sau khi tạo phiếu" 
                                   FontSize="12"
                                   Foreground="#999999" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Cancel Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ" FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Save Button -->
                        <Border Background="#FF9800"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF9800"
                                                  BlurRadius="15"
                                                  ShadowDepth="3"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnSave_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓" FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Cập nhật phiếu nhập"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>