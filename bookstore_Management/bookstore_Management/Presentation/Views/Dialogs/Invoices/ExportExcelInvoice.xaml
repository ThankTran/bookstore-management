<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Invoices.ExportExcelInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Invoices"
        mc:Ignorable="d"
        Title="Xuất Excel"
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CheckboxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#4CAF50"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="📊"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Xuất dữ liệu Excel"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Xuất danh sách hóa đơn ra file Excel"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#66BB6A"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Invoice Type Selection -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📋 Loại hóa đơn"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,15"/>

                            <RadioButton x:Name="rbAll"
                                         Content="Tất cả hóa đơn (Nhập + Xuất)"
                                         IsChecked="True"
                                         GroupName="InvoiceType"
                                         Style="{StaticResource RadioButtonStyle}"/>

                            <RadioButton x:Name="rbImportOnly"
                                         Content="📥 Chỉ phiếu nhập hàng"
                                         GroupName="InvoiceType"
                                         Style="{StaticResource RadioButtonStyle}"/>

                            <RadioButton x:Name="rbExportOnly"
                                         Content="📤 Chỉ hóa đơn bán hàng"
                                         GroupName="InvoiceType"
                                         Style="{StaticResource RadioButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Date Range -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📅 Khoảng thời gian"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,15"/>

                            <RadioButton x:Name="rbAllTime"
                                         Content="Tất cả thời gian"
                                         IsChecked="True"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <RadioButton x:Name="rbToday"
                                         Content="Hôm nay"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <RadioButton x:Name="rbThisWeek"
                                         Content="Tuần này"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <RadioButton x:Name="rbThisMonth"
                                         Content="Tháng này"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <RadioButton x:Name="rbThisYear"
                                         Content="Năm nay"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <RadioButton x:Name="rbCustomRange"
                                         Content="Tùy chỉnh khoảng thời gian"
                                         GroupName="DateRange"
                                         Style="{StaticResource RadioButtonStyle}"
                                         Checked="DateRange_Changed"/>

                            <!-- Custom Date Range -->
                            <Grid x:Name="customDatePanel"
                                  Visibility="Collapsed"
                                  Margin="25,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Từ ngày:"
                                               FontSize="12"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <DatePicker x:Name="dpStartDate"
                                                Style="{StaticResource DatePickerStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Đến ngày:"
                                               FontSize="12"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <DatePicker x:Name="dpEndDate"
                                                Style="{StaticResource DatePickerStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Export Options -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="⚙️ Tùy chọn xuất"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,15"/>

                            <CheckBox x:Name="chkIncludeDetails"
                                      Content="Bao gồm chi tiết từng hóa đơn"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkIncludeStatistics"
                                      Content="Thêm bảng thống kê tổng hợp"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkFormatCurrency"
                                      Content="Định dạng tiền tệ (1,000,000 ₫)"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkAutoFitColumns"
                                      Content="Tự động điều chỉnh độ rộng cột"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkAddFilters"
                                      Content="Thêm bộ lọc tự động cho bảng"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkFreezeHeader"
                                      Content="Cố định dòng tiêu đề khi cuộn"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>

                            <CheckBox x:Name="chkAlternateRows"
                                      Content="Tô màu xen kẽ các dòng"
                                      IsChecked="True"
                                      Style="{StaticResource CheckboxStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- File Format -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="💾 Định dạng file"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,15"/>

                            <RadioButton x:Name="rbXlsx"
                                         Content="📊 Excel 2007+ (.xlsx) - Khuyên dùng"
                                         IsChecked="True"
                                         GroupName="FileFormat"
                                         Style="{StaticResource RadioButtonStyle}"/>

                            <RadioButton x:Name="rbXls"
                                         Content="📊 Excel 97-2003 (.xls)"
                                         GroupName="FileFormat"
                                         Style="{StaticResource RadioButtonStyle}"/>

                            <RadioButton x:Name="rbCsv"
                                         Content="📄 CSV (.csv) - Dữ liệu thô"
                                         GroupName="FileFormat"
                                         Style="{StaticResource RadioButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Summary Info -->
                    <Border Background="#E8F5E9"
                            CornerRadius="12"
                            Padding="20"
                            Margin="20,20,0,0">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="📈 Thống kê dữ liệu sẽ xuất"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#2E7D32"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Tổng số hóa đơn: "
                                               FontSize="12"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="tbTotalCount"
                                               Text="0"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Phiếu nhập: "
                                               FontSize="12"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="tbImportCount"
                                               Text="0"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Hóa đơn bán: "
                                               FontSize="12"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="tbExportCount"
                                               Text="0"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Khoảng thời gian: "
                                               FontSize="12"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="tbDateRange"
                                               Text="Tất cả"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#2E7D32"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="💡" FontSize="13" Margin="0,0,5,0"/>
                        <TextBlock Text="File Excel sẽ được lưu tự động sau khi xuất"
                                   FontSize="12"
                                   Foreground="#999999"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Cancel Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Export Button -->
                        <Border Background="#4CAF50" CornerRadius="10" Padding="25,10" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#4CAF50" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnExport_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Xuất Excel" FontSize="13" FontWeight="Bold" 
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>