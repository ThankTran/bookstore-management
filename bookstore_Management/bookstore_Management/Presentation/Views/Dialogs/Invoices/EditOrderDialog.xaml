<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Invoices.EditOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa Hóa Đơn Bán"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="ReadOnlyBorderStyle" TargetType="Border" BasedOn="{StaticResource InputBorderStyle}">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2196F3"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="✏️"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Sửa hóa đơn bán hàng"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Chỉnh sửa giảm giá, thanh toán và ghi chú"
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#42A5F5"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <TextBlock Text="✕"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Info Section (Read-only) -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã hóa đơn" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource ReadOnlyBorderStyle}">
                                <Grid>
                                    <TextBox x:Name="tbOrderId"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             IsReadOnly="True"
                                             Foreground="#999999"
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="🔒" FontSize="14" Foreground="#999999"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Margin="0,0,5,0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Nhân viên" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource ReadOnlyBorderStyle}">
                                <TextBox x:Name="tbStaffName"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsReadOnly="True"
                                         Foreground="#666666"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Khách hàng" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource ReadOnlyBorderStyle}">
                                <TextBox x:Name="tbCustomerName"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsReadOnly="True"
                                         Foreground="#666666"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Ngày tạo" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource ReadOnlyBorderStyle}">
                                <TextBox x:Name="tbCreatedDate"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsReadOnly="True"
                                         Foreground="#666666"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Editable: Payment Method -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Phương thức thanh toán *" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <ComboBox x:Name="cbPaymentMethod"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      FontSize="13">
                                <ComboBoxItem Content="💵 Tiền mặt"/>
                                <ComboBoxItem Content="💳 Quẹt thẻ"/>
                                <ComboBoxItem Content="📱 Chuyển khoản"/>
                                <ComboBoxItem Content="👜 Thẻ tín dụng"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <!-- Order Details (Read-only display) -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="📚 Chi tiết đơn hàng"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#2196F3"/>
                                <TextBlock Text="🔒 Không thể sửa danh sách sách"
                                           FontSize="11"
                                           Foreground="#1976D2"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <Border Background="White"
                                    CornerRadius="8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    MaxHeight="200">
                                <DataGrid x:Name="dgOrderDetails"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          Background="White"
                                          BorderThickness="0"
                                          RowBackground="White"
                                          AlternatingRowBackground="#FAFAFA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Tên sách" 
                                                            Binding="{Binding BookName}" 
                                                            Width="*"/>
                                        <DataGridTextColumn Header="SL" 
                                                            Binding="{Binding Quantity}" 
                                                            Width="60"/>
                                        <DataGridTextColumn Header="Đơn giá" 
                                                            Binding="{Binding SalePrice, StringFormat={}{0:N0} ₫}" 
                                                            Width="120"/>
                                        <DataGridTextColumn Header="Thành tiền" 
                                                            Binding="{Binding Subtotal, StringFormat={}{0:N0} ₫}" 
                                                            Width="130"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Payment Summary (Editable Discount) -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="Tạm tính:" FontSize="13" Foreground="#666666"/>
                                <TextBlock x:Name="tbSubtotal"
                                           Text="0 ₫"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#666666"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <TextBlock Text="Giảm giá (VND): *" 
                                           FontSize="13" 
                                           Foreground="#666666" 
                                           VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="tbDiscount"
                                             Text="0"
                                             Width="150"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Padding="10,5"
                                             FontSize="13"
                                             TextAlignment="Right"
                                             Margin="0,0,5,0"
                                             PreviewTextInput="NumericOnly_PreviewTextInput"
                                             TextChanged="Discount_TextChanged"/>
                                    <TextBlock Text="₫" FontSize="13" Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Row="2" Height="1" Background="#E0E0E0" Margin="0,5,0,15"/>

                            <Grid Grid.Row="3">
                                <TextBlock Text="TỔNG THANH TOÁN:"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2196F3"/>
                                <TextBlock x:Name="tbTotal"
                                           Text="0 ₫"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#2196F3"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Editable: Notes -->
                    <StackPanel>
                        <TextBlock Text="Ghi chú" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}" Height="60">
                            <TextBox x:Name="tbNotes"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"
                                     Padding="0,5"/>
                        </Border>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="⚠️" Foreground="#2196F3" FontSize="13"
                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Không thể thay đổi nhân viên, khách hàng hoặc sản phẩm" 
                                   FontSize="12"
                                   Foreground="#999999" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="#666666" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <Border Background="#2196F3" CornerRadius="10" Padding="25,10" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="BtnSave_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Cập nhật hóa đơn" FontSize="13" FontWeight="Bold" 
                                               Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>