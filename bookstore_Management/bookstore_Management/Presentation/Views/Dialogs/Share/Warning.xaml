<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Share.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="360"
        SizeToContent="Height"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Border Style="{StaticResource DialogBorder}"
            CornerRadius="13"
            SnapsToDevicePixels="True">
        <StackPanel>

            <!-- Header -->
            <Border Background="#EC5B5B"
                    CornerRadius="13,13,0,0"
                    Padding="16">
                <TextBlock Text="⚠"
                           FontSize="34"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Content -->
            <Border Padding="18" HorizontalAlignment="Center">
                <StackPanel>

                    <TextBlock Text="Warning!"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#333"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,8"/>

                    <TextBlock Text="Bạn không có quyền truy cập vào trang này!"
                               FontSize="13"
                               Foreground="#666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"
                               MaxWidth="280"/>

                    <Button Content="CLOSE"
                            Width="110"
                            Height="34"
                            Background="#EC5B5B"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="18"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
