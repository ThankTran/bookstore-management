<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Share.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="450"
        MaxWidth="550">

    <Border Style="{StaticResource EnhancedDialogBorder}">
        <!-- Scale Animation -->
        <Border.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" ScaleX="0.9" ScaleY="0.9"/>
        </Border.RenderTransform>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                       Storyboard.TargetProperty="ScaleX"
                                       To="1" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                       Storyboard.TargetProperty="ScaleY"
                                       To="1" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Close Button -->
            <Button Grid.Row="0"
                    Style="{StaticResource DialogCloseButton}"
                    Content="✕"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-10,-10,0"
                    x:Name="BtnClose"
                    Click="BtnClose_Click"
                    ToolTip="Đóng (ESC)"/>

            <!-- Icon -->
            <Border Grid.Row="1"
                    Style="{StaticResource DangerIconStyle}">
                <Viewbox Width="40" Height="40">
                    <Canvas Width="24" Height="24">
                        <!-- Trash icon with shadow for better contrast -->
                        <Path Fill="White" 
                              Stroke="#D32F2F"
                              StrokeThickness="0.3"
                              Data="M6,19 C6,20.1 6.9,21 8,21 L16,21 C17.1,21 18,20.1 18,19 L18,7 L6,7 L6,19 Z M19,4 L15.5,4 L14.5,3 L9.5,3 L8.5,4 L5,4 L5,6 L19,6 L19,4 Z">
                            <Path.Effect>
                                <DropShadowEffect Color="#C62828" 
                                                BlurRadius="2" 
                                                ShadowDepth="1" 
                                                Opacity="0.3"/>
                            </Path.Effect>
                        </Path>
                    </Canvas>
                </Viewbox>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="2"
                       Style="{StaticResource EnhancedDialogTitle}"
                       Text="Xác nhận xóa"/>

            <!-- Message -->
            <Border Grid.Row="3"
                    Background="#FFEBEE"
                    CornerRadius="12"
                    Padding="20,15"
                    Margin="0,0,0,25">
                <StackPanel>
                    <!-- Main Message -->
                    <TextBlock FontFamily="{StaticResource PrimaryFont}"
                               FontSize="14"
                               Foreground="#666666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               LineHeight="20"
                               Margin="0,0,0,12">
                        <Run Text="Bạn có chắc chắn muốn"/>
                        <Run Text="xóa" FontWeight="Bold" Foreground="#F44336"/>
                        <Run Text="thông tin này không?"/>
                    </TextBlock>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="#FFCDD2"
                            Margin="0,0,0,12"/>

                    <!-- Item Information -->
                    <StackPanel>
                        <!-- Item Type -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8">
                            <TextBlock Text="📦" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Loại:"/>
                                <Run x:Name="txtItemType" 
                                     Text="Sách" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Item Name with Tooltip -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8">
                            <TextBlock Text="📌" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Tên:"/>
                            </TextBlock>
                            <TextBlock x:Name="txtItemName"
                                       Text="Tên đối tượng cần xóa" 
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       MaxWidth="300"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBlock}}"
                                                   MaxWidth="400"
                                                   TextWrapping="Wrap"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>

                        <!-- Item ID (Optional) -->
                        <StackPanel x:Name="pnlItemId"
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed">
                            <TextBlock Text="🔢" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Mã:"/>
                                <Run x:Name="txtItemId" 
                                     Text="" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Warning Message -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="12,10"
                            Margin="0,15,0,0"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#F44336"
                                       Text="⚠️ Cảnh báo"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtWarning"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="16"
                                       Text="Hành động này không thể hoàn tác. Dữ liệu sẽ bị xóa vĩnh viễn khỏi hệ thống."/>
                        </StackPanel>
                    </Border>

                    <!-- Additional Info (Optional) -->
                    <StackPanel x:Name="pnlAdditionalInfo"
                                Visibility="Collapsed"
                                Margin="0,10,0,0">
                        <Border Background="#FFF3E0"
                                CornerRadius="8"
                                Padding="12,10"
                                BorderBrush="#FFE0B2"
                                BorderThickness="1">
                            <TextBlock x:Name="txtAdditionalInfo"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="16"
                                       Text=""/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Buttons (FIXED ORDER: Delete first, Cancel second) -->
            <StackPanel Grid.Row="4"
                        Style="{StaticResource EnhancedButtonContainer}">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <!-- Delete Button (Primary - LEFT) -->
                    <Border Background="{StaticResource DangerIconGradient}"
                            CornerRadius="10"
                            Height="42"
                            Width="140"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#F44336" 
                                            BlurRadius="10" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button x:Name="BtnDelete"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                IsDefault="False"
                                Click="BtnDelete_Click"
                                ToolTip="Xóa vĩnh viễn">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Xóa"
                                           FontFamily="{StaticResource PrimaryFont}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Cancel Button (Secondary - RIGHT) -->
                    <Border Width="140"
                            Height="42"
                            CornerRadius="10"
                            Margin="15,0,0,0">
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource SecondaryButtonBorder}">
                                <Setter Property="Width" Value="140"/>
                                <Setter Property="Height" Value="42"/>
                                <Setter Property="CornerRadius" Value="10"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D5D5E8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button x:Name="BtnCancel"
                                Style="{StaticResource SecondaryButton}"
                                IsCancel="True"
                                Click="BtnCancel_Click"
                                ToolTip="Hủy thao tác (ESC)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✕" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Hủy bỏ"
                                           FontFamily="{StaticResource PrimaryFont}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>