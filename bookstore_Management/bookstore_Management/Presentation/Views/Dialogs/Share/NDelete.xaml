<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Share.NDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="420"
        MaxWidth="500">

    <Border Style="{StaticResource EnhancedDialogBorder}">
        <!-- Scale Animation -->
        <Border.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" ScaleX="0.9" ScaleY="0.9"/>
        </Border.RenderTransform>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                       Storyboard.TargetProperty="ScaleX"
                                       To="1" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                       Storyboard.TargetProperty="ScaleY"
                                       To="1" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Close Button -->
            <Button Grid.Row="0"
                    Style="{StaticResource DialogCloseButton}"
                    Content="✕"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-10,-10,0"
                    x:Name="BtnClose"
                    Click="BtnClose_Click"
                    ToolTip="Đóng (ESC)"/>

            <!-- Icon -->
            <Border Grid.Row="1"
                    Style="{StaticResource DangerIconStyle}">
                <Viewbox Width="40" Height="40">
                    <Canvas Width="24" Height="24">
                        <!-- Shield with trash icon combined - Enhanced -->
                        <Path Fill="White" 
                              Stroke="#D32F2F"
                              StrokeThickness="0.3"
                              Data="M12,1 L21,5 L21,11 C21,16.55 17.16,21.74 12,23 C6.84,21.74 3,16.55 3,11 L3,5 L12,1 Z">
                            <Path.Effect>
                                <DropShadowEffect Color="#C62828" 
                                                BlurRadius="2" 
                                                ShadowDepth="1" 
                                                Opacity="0.3"/>
                            </Path.Effect>
                        </Path>
                        <Path Fill="#F44336" 
                              Data="M9,15 C9,15.55 9.45,16 10,16 L14,16 C14.55,16 15,15.55 15,15 L15,10 L9,10 L9,15 Z M8.5,9.5 L15.5,9.5 L14.5,8 L9.5,8 Z"/>
                    </Canvas>
                </Viewbox>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="2"
                       Style="{StaticResource EnhancedDialogTitle}"
                       Text="Không có quyền xóa"/>

            <!-- Message -->
            <Border Grid.Row="3"
                    Background="#FFEBEE"
                    CornerRadius="12"
                    Padding="20,15"
                    Margin="0,0,0,25">
                <StackPanel>
                    <!-- Main Message -->
                    <TextBlock FontFamily="{StaticResource PrimaryFont}"
                               FontSize="14"
                               Foreground="#666666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               LineHeight="20"
                               Margin="0,0,0,12">
                        <Run Text="Bạn không có quyền"/>
                        <Run Text="xóa" FontWeight="Bold" Foreground="#F44336"/>
                        <Run Text="thông tin này."/>
                    </TextBlock>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="#FFCDD2"
                            Margin="0,0,0,12"/>

                    <!-- Detail Information -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8">
                            <TextBlock Text="👤" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Vai trò của bạn:"/>
                                <Run x:Name="txtUserRole" 
                                     Text="Nhân viên" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8">
                            <TextBlock Text="🔒" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Yêu cầu quyền:"/>
                                <Run x:Name="txtRequiredRole" 
                                     Text="Quản lý" 
                                     FontWeight="SemiBold"
                                     Foreground="#F44336"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Item trying to delete with Tooltip -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="📦" 
                                       FontSize="14"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666"
                                       VerticalAlignment="Center">
                                <Run Text="Đối tượng:"/>
                            </TextBlock>
                            <TextBlock x:Name="txtItemName"
                                       Text="Đối tượng cần xóa" 
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       MaxWidth="250"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="4,0,0,0"
                                       VerticalAlignment="Center">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBlock}}"
                                                   MaxWidth="350"
                                                   TextWrapping="Wrap"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Reason Box (Optional) -->
                    <Border x:Name="pnlReason"
                            Background="White"
                            CornerRadius="8"
                            Padding="12,10"
                            Margin="0,15,0,0"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#F44336"
                                       Text="⚠️ Lý do"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtReason"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="16"
                                       Text=""/>
                        </StackPanel>
                    </Border>

                    <!-- Suggestion -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="12,10"
                            Margin="0,15,0,0"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#F44336"
                                       Text="💡 Gợi ý"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtSuggestion"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="16"
                                       Text="Vui lòng liên hệ với quản lý hoặc quản trị viên để được cấp quyền thực hiện thao tác xóa này."/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Button -->
            <StackPanel Grid.Row="4"
                        Style="{StaticResource EnhancedButtonContainer}">
                <Border Background="{StaticResource DangerIconGradient}"
                        CornerRadius="10"
                        Height="42"
                        Width="160"
                        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="#F44336" 
                                        BlurRadius="10" 
                                        ShadowDepth="2" 
                                        Opacity="0.3"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button x:Name="BtnOk"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            IsDefault="True"
                            IsCancel="True"
                            Click="BtnOk_Click"
                            ToolTip="Đóng (Enter/ESC)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" 
                                       FontSize="18"
                                       Foreground="White"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Đã hiểu"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>