<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Share.NUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Width="450">

    <Border Style="{StaticResource EnhancedDialogBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Close Button -->
            <Button Grid.Row="0"
                    Style="{StaticResource DialogCloseButton}"
                    Content="✕"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-10,-10,0"
                    Click="Button_Click"/>

            <!-- Icon -->
            <Border Grid.Row="1"
                    Style="{StaticResource WarningIconStyle}">
                <Viewbox Width="40" Height="40">
                    <Canvas Width="24" Height="24">
                        <!-- Shield with X icon -->
                        <Path Fill="White" 
                              Data="M12,1 L21,5 L21,11 C21,16.55 17.16,21.74 12,23 C6.84,21.74 3,16.55 3,11 L3,5 L12,1 Z"/>
                        <Path Fill="#FF9800" 
                              Stroke="White"
                              StrokeThickness="1.5"
                              Data="M15,9 L9,15 M9,9 L15,15"/>
                    </Canvas>
                </Viewbox>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="2"
                       Style="{StaticResource EnhancedDialogTitle}"
                       Text="Không có quyền truy cập"/>

            <!-- Message -->
            <Border Grid.Row="3"
                    Background="#FFF3E0"
                    CornerRadius="12"
                    Padding="20,15"
                    Margin="0,0,0,25">
                <StackPanel>
                    <!-- Main Message -->
                    <TextBlock FontFamily="{StaticResource PrimaryFont}"
                               FontSize="14"
                               Foreground="#666666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12">
                        <Run Text="Bạn không có quyền"/>
                        <Run Text="chỉnh sửa" FontWeight="Bold" Foreground="#F57C00"/>
                        <Run Text="thông tin này."/>
                    </TextBlock>

                    <!-- Divider -->
                    <Border Height="1"
                            Background="#FFE0B2"
                            Margin="0,0,0,12"/>

                    <!-- Detail Information -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8">
                            <TextBlock Text="👤" 
                                       FontSize="14"
                                       Margin="0,0,8,0"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666">
                                <Run Text="Vai trò của bạn:"/>
                                <Run x:Name="txtUserRole" 
                                     Text="Nhân viên" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="🔒" 
                                       FontSize="14"
                                       Margin="0,0,8,0"/>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="12"
                                       Foreground="#666666">
                                <Run Text="Yêu cầu quyền:"/>
                                <Run x:Name="txtRequiredRole" 
                                     Text="Quản lý" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource WarningBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Suggestion -->
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="12,10"
                            Margin="0,15,0,0"
                            BorderBrush="#FFE0B2"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource WarningBrush}"
                                       Text="💡 Gợi ý"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtSuggestion"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="11"
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       Text="Vui lòng liên hệ với quản lý hoặc quản trị viên để được cấp quyền thực hiện thao tác này."/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Button -->
            <StackPanel Grid.Row="4"
                        Style="{StaticResource EnhancedButtonContainer}">
                <Border Background="{StaticResource WarningIconGradient}"
                        CornerRadius="10"
                        Height="42"
                        Width="160"
                        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF9800" 
                                        BlurRadius="10" 
                                        ShadowDepth="2" 
                                        Opacity="0.3"/>
                    </Border.Effect>
                    <Button x:Name="BtnOk"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="BtnOk_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" 
                                       FontSize="18"
                                       Foreground="White"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Đã hiểu"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>