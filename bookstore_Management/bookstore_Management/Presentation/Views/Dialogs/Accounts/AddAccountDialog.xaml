<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Accounts.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        Height="395"
        Width="480">

    <Border Style="{StaticResource DialogBorder}">
        <Grid>
            <StackPanel HorizontalAlignment="Left" Width="480">

                <!-- Tiêu đề -->
                <TextBlock Text="Tạo tài khoản mới"
                           Style="{StaticResource DialogTitle}"
                           Margin="0,10,0,0"
                           FontSize="16"/>

                <!-- Form nhập liệu -->
                <Grid Style="{StaticResource DialogFormContainer}"
                      Margin="30,20,30,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mã nhân viên -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã nhân viên"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <TextBox x:Name="txtMaNV"
                                 Style="{StaticResource FlatTextBox}"
                                 Text="NV"/>
                    </Border>

                    <!-- Tên nhân viên -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Tên nhân viên"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <TextBox x:Name="txtTenNV"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Tên đăng nhập -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Tên đăng nhập"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="2" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <TextBox x:Name="txtTenDangNhap"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Mật khẩu -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Mật khẩu"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="3" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <PasswordBox x:Name="txtMatKhau"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontFamily="{StaticResource PrimaryFont}"
                                     FontSize="13"
                                     Padding="10,0"/>
                    </Border>

                    <!-- Email -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Email"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="4" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Số điện thoại -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Số điện thoại"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="5" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}"
                            Margin="0,5,0,5"
                            Width="280">
                        <TextBox x:Name="txtSDT"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Chức vụ -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Chức vụ"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="6" Grid.Column="1"
                            CornerRadius="5"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,5,0,5"
                            Width="280"
                            Height="28">
                        <ComboBox x:Name="cboChucVu"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  FontFamily="{StaticResource PrimaryFont}"
                                  FontSize="13"
                                  Padding="10,0">
                            <ComboBoxItem Content="Quản lý" IsSelected="True"/>
                            <ComboBoxItem Content="Nhân viên bán hàng"/>
                            <ComboBoxItem Content="Nhân viên kho"/>
                            <ComboBoxItem Content="Kế toán"/>
                        </ComboBox>
                    </Border>
                </Grid>

                <!-- Nút Tạo / Hủy -->
                <StackPanel Style="{StaticResource DialogButtonContainer}"
                            Margin="0,20,0,15">
                    <Border Style="{StaticResource PrimaryButtonBorder}"
                            Width="100"
                            Margin="0,0,20,0">
                        <Button x:Name="btnCreate"
                                Content="Tạo tài khoản"
                                Style="{StaticResource PrimaryButton}"
                                Click="btnCreate_Click"/>
                    </Border>

                    <Border Style="{StaticResource SecondaryButtonBorder}"
                            Width="100">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                Style="{StaticResource SecondaryButton}"
                                Click="btnCancel_Click"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>