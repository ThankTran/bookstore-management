<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Books.AddBookgitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Books"
        xmlns:core="clr-namespace:bookstore_Management.Core.Enums"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="580" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider
            x:Key="BookCategoryValues"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:BookCategory"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Input Border Style -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#585AB8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Input TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" 
            Background="White" 
            BorderThickness="0"
            BorderBrush="{StaticResource BorderBrush}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            BlurRadius="30" 
                            ShadowDepth="8" 
                            Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="74*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="20,20,0,0"
                    Padding="30,20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="📚" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Thêm sách mới" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Nhập thông tin chi tiết sách" 
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Border Background="#7577C3"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Click="BtnCancel_Click"
                                Cursor="Hand">
                            <TextBlock Text="✕" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25" Grid.RowSpan="2">
                <StackPanel>

                    <!-- Mã sách (Auto-generated) -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã sách" Style="{StaticResource LabelStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="Mã sách được tạo tự động"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <Border Style="{StaticResource InputBorderStyle}"
                                    Background="#F5F5F5">
                                <Grid>
                                    <TextBox x:Name="tbBookID"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             IsReadOnly="True"
                                             Foreground="#999999"
                                             Text="{Binding ScannedBookID, Mode=TwoWay}"/>
                                    <TextBlock Text="🔒 Tự động"
                                               FontSize="11"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Thể loại -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Thể loại *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <ComboBox x:Name="cbCategory"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          FontSize="13"
                                          ItemsSource="{Binding Source={StaticResource BookCategoryValues}}"
                                          SelectedItem="{Binding Category}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       FontFamily="{StaticResource PrimaryFont}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Tên sách -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tên sách *" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <TextBox x:Name="tbBookName"
                                     Style="{StaticResource InputTextBoxStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Tác giả & Nhà xuất bản -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tác giả *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <TextBox x:Name="tbAuthor"
                                         Style="{StaticResource InputTextBoxStyle}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Nhà xuất bản *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <TextBox x:Name="tbPublisher"
                                         Style="{StaticResource InputTextBoxStyle}"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Giá nhập & Giá bán -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Giá nhập (₫) *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Grid>
                                    <TextBox x:Name="tbImportPrice"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             />
                                    <!--PreviewTextInput="NumericOnly_PreviewTextInput"-->
                                    <TextBlock Text="₫"
                                               FontSize="13"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Giá bán (₫) *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <Grid>
                                    <TextBox x:Name="tbSalePrice"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             />
                                    <!-- PreviewTextInput="NumericOnly_PreviewTextInput" -->
                                    <TextBlock Text="₫"
                                               FontSize="13"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Preview Card -->
                    <Border Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="💡 Lưu ý khi nhập liệu" 
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#585AB8"
                                       Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="#666666"
                                       LineHeight="20">
                                <Run Text="• Các trường đánh dấu (*) là bắt buộc"/>
                                <LineBreak/>
                                <Run Text="• Giá bán phải lớn hơn giá nhập"/>
                                <LineBreak/>
                                <Run Text="• Mã sách sẽ được tạo tự động khi lưu"/>
                                <LineBreak/>
                                <Run Text="• Kiểm tra kỹ thông tin trước khi lưu"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="3" 
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <TextBlock Text="*" 
                                   Foreground="#F44336"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Trường bắt buộc" 
                                   FontSize="12"
                                   Foreground="#999999"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!-- Cancel Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Click="BtnCancel_Click"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" 
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Save Button -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#585AB8" 
                                                BlurRadius="15" 
                                                ShadowDepth="3" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Click="BtnSave_Click"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Lưu sách"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>