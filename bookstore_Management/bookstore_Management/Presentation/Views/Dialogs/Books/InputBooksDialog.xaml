<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Books.InputBooksDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Books"
        mc:Ignorable="d"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="15" Background="White" BorderThickness="2" BorderBrush="#585ab8">
        <Grid>
            <StackPanel>
                <!--content "thêm sách"-->
                <StackPanel>
                    <TextBlock Text="Thêm sách" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="15" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                </StackPanel>
                <!--textbox to input books-->
                <StackPanel Margin="0,20,0,0">

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Tên sách" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="47,0,20,0" Width="200">
                            <TextBox BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Tác giả" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="57,0,20,0" Width="200">
                            <TextBox BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Nhà xuất bản" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="18,0,20,0" Width="200">
                            <TextBox BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Giá nhập" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="46,0,20,0" Width="200">
                            <TextBox BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Giá bán" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="53.5,0,20,0" Width="200">
                            <TextBox BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                </StackPanel>
                <!--update and cancel-->

                <StackPanel Margin="120,5,0,0" Orientation="Horizontal" Height="54" Width="276">
                    <Border Width="76" CornerRadius="5" Background="#585ab8" Height="25" Margin="55,0,0,0">
                        <Button Content="Cập nhật" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>

                    <Border Width="76" CornerRadius="5" Background="#E9E9F5" Height="25" Margin="25,0,0,0">
                        <Button Content="Hủy" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="#585ab8" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>