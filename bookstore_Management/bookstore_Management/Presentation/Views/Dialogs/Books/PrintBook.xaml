<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Books.PrintBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Books"
        mc:Ignorable="d"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

        <Border CornerRadius="20" 
            Background="White" 
            BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                            BlurRadius="30" 
                            ShadowDepth="8" 
                            Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <!---->
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                                <TextBlock Text="🖨️" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="txtTitle"
                                       Text="In Danh Sách Sách" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                                <TextBlock Text="Cấu hình in ấn và xem trước" 
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Close Button -->
                        <Border Background="#7577C3"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                            <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                                <TextBlock Text="✕" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Button>
                        </Border>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                    <StackPanel>

                        <!-- Preview Section -->
                        <TextBlock Text="📋 Xem Trước"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,10"/>

                        <Border Background="#F8F9FA"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,20"
                            Height="150">
                            <Grid>
                                <TextBlock Text="📄 Preview sẽ hiển thị ở đây"
                                       FontSize="13"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <!-- Actual preview container (will be populated by code-behind) -->
                                <Border x:Name="PreviewContainer"
                                    Background="White"
                                    CornerRadius="5"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Visibility="Collapsed">
                                    <FlowDocumentScrollViewer x:Name="DocPreview"
                                                          VerticalScrollBarVisibility="Auto"
                                                          IsToolBarVisible="False"/>
                                </Border>

                            </Grid>
                        </Border>

                        <!-- Print Settings -->
                        <TextBlock Text="⚙️ Cấu Hình In"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                        <!-- Paper Size -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Khổ giấy"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                            <Border CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White">
                                <ComboBox x:Name="cbPaperSize"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Padding="12,8"
                                      SelectedValue="{Binding PaperSize}" 
                                      SelectedValuePath="Content"
                                      FontSize="13">
                                    <ComboBoxItem Content="A4 (210 × 297mm)" IsSelected="True"/>
                                    <ComboBoxItem Content="A5 (148 × 210mm)"/>
                                    <ComboBoxItem Content="Letter (216 × 279mm)"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <!-- Orientation -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Hướng giấy"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <RadioButton Grid.Column="0"
                                         x:Name="rbPortrait"
                                         IsChecked="{Binding IsPortrait}"
                                         FontSize="13"
                                         Margin="0,0,10,0"/>
                                <RadioButton Grid.Column="1"
                                         x:Name="rbLandscape"
                                         Content="Ngang (Landscape)"
                                         FontSize="13"/>
                            </Grid>
                        </StackPanel>

                        <!-- Number of Copies -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Số bản in"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                            <Border CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White"
                                Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                        Content="−"
                                        FontSize="18"
                                        Width="30" Height="30"
                                        Background="#F5F5F5"
                                        BorderThickness="0"
                                        Command="{Binding DecreaseCopyCommand}"
                                        Cursor="Hand"/>
                                    <TextBox Grid.Column="1"
                                         x:Name="txtCopies"
                                         TextAlignment="Center"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         VerticalContentAlignment="Center"
                                         Margin="10,0"
                                         Text="{Binding Copies}"
                                         PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                    <!---->
                                    <Button Grid.Column="2"
                                        Content="+"
                                        FontSize="18"
                                        Width="30" Height="30"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Command="{Binding IncreaseCopyCommand}"
                                        />
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Print Options -->
                        <Border Background="#F8F9FA"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,15">
                            <StackPanel>
                                <CheckBox x:Name="chkPreview"
                                      Content="Xem trước khi in"
                                      IsChecked="True"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                                <CheckBox x:Name="chkColor"
                                      Content="In màu"
                                      IsChecked="False"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                                <CheckBox x:Name="chkDuplex"
                                      Content="In 2 mặt"
                                      IsChecked="False"
                                      Margin="0,0,0,8"
                                      FontSize="13"/>
                                <CheckBox x:Name="chkSavePDF"
                                      Content="Tự động lưu bản PDF"
                                      IsChecked="True"
                                      FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <!-- Data Range (specific to Book list) -->
                        <TextBlock Text="📊 Phạm Vi Dữ Liệu"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,10"/>

                        <Border Background="#E3F2FD"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,15">
                            <StackPanel>
                                <RadioButton x:Name="rbAllBook"
                                         Content="Tất cả sách"
                                         IsChecked="True"
                                         Margin="0,0,0,8"
                                         FontSize="13"/>
                                <RadioButton x:Name="rbSelectedBook"
                                         Content="Chỉ sách đã chọn"
                                         Margin="0,0,0,8"
                                         FontSize="13"/>
                                <RadioButton x:Name="rbFilteredBook"
                                         Content="Theo bộ lọc hiện tại"
                                         FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <!-- Info Box -->
                        <Border Background="#FFF3E0"
                            CornerRadius="10"
                            Padding="12">
                            <StackPanel>
                                <TextBlock Text="💡 Lưu ý"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#F57C00"
                                       Margin="0,0,0,5"/>
                                <TextBlock Text="• Đảm bảo máy in đã kết nối"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0,0,0,3"/>
                                <TextBlock Text="• Kiểm tra đủ giấy trong khay"
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0,0,0,3"/>
                                <TextBlock x:Name="txtRecordCount"
                                       Text="• Sẽ in 15 cuốn sách"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#F57C00"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2" 
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                            <!-- Preview Button -->
                            <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="1"
                                Padding="35,5"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Height="55" Width="154">
                                <Button 
                                    x:Name="btnPreview"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Height="42" Margin="-35,0,-35,0"
                                    Click="BtnPreview_Click"
                                    >                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Functions/preview.png"
                                           Width="37"
                                           Height="37"
                                           Stretch="Uniform"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                        <TextBlock Text="Xem trước"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Print Button -->
                            <Border 
                                Background="{StaticResource PrimaryBrush}"
                                CornerRadius="10"
                                Padding="35,5"
                                Cursor="Hand" Height="55" Width="151">
                                <Border.Effect>
                                    <DropShadowEffect Color="{Binding Source={StaticResource PrimaryBrush}, Path=Color}"
                                                BlurRadius="15"
                                                ShadowDepth="3"
                                                Opacity="0.3"/>
                                </Border.Effect>
                                <Button                                    
                                    x:Name="btnPrint"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand" Height="42" Margin="-12,0,-12,0"
                                    Click="BtnPrint_Click"
                                    >
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Functions/print.png"
                                           Width="30"
                                           Height="30"
                                           Stretch="Uniform"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                        <TextBlock Text="In ngay"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Window>