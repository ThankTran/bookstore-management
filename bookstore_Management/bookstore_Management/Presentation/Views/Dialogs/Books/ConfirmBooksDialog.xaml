<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Books.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Books"
        mc:Ignorable="d"
        Height="120" Width="360"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="13" Background="White" BorderThickness="2" BorderBrush="#585ab8">
        <Grid>
            <StackPanel>
                <!--content "xóa sách"-->
                <StackPanel>
                    <TextBlock Text="Xóa sách" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="15" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                </StackPanel>

                <TextBlock Text="Bạn có chắc chắn muốn xóa sách này khỏi hệ thống?" HorizontalAlignment="Center" Margin="5,13,5,0" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand" FontWeight="Medium" Foreground="#585ab8" Height="17"/>
                <!--confirm and cancel-->

                <StackPanel Margin="90,0,0,0" Orientation="Horizontal" Height="50" Width="275">
                    <Border Width="76" CornerRadius="5" Background="#585ab8" Height="25" Margin="55,0,0,0">
                        <Button Content="Xác nhận" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>

                    <Border Width="76" CornerRadius="5" Background="#E9E9F5" Height="25" Margin="25,0,0,0">
                        <Button Content="Hủy" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="#585ab8" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>
                </StackPanel>                
            </StackPanel>
            
        </Grid>
        
    </Border>
</Window>
