<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.DeleteCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="120" 
        Width="360"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        SizeToContent="Manual">

    <Border Style="{StaticResource DialogBorder}"
            CornerRadius="13">
        <Grid>
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="Xóa khách hàng"
                           Style="{StaticResource DialogTitle}"
                           Margin="0,10,0,0"
                           FontSize="15"/>

                <!-- Nội dung xác nhận -->
                <TextBlock Text="Bạn có chắc chắn muốn xóa khách hàng này khỏi hệ thống?"
                           HorizontalAlignment="Center"
                           Margin="5,13,5,0"
                           FontSize="12"
                           FontFamily="{StaticResource PrimaryFont}"
                           FontWeight="Medium"
                           Foreground="{StaticResource PrimaryBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <!-- Nút Xác nhận / Hủy -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <Border Style="{StaticResource PrimaryButtonBorder}"
                            Width="80" 
                            Height="28"
                            Margin="0,0,20,0">
                        <Button x:Name="btnConfirm"
                                Content="Xác nhận"
                                Style="{StaticResource PrimaryButton}"
                                Click="btnConfirm_Click"/>
                    </Border>

                    <Border Style="{StaticResource SecondaryButtonBorder}"
                            Width="80" 
                            Height="28">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                Style="{StaticResource SecondaryButton}"
                                Click="btnCancel_Click"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>