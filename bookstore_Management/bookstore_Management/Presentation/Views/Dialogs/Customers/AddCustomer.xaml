<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Style textbox phẳng: không viền, không viền khi focus -->
    <Window.Resources>
        <Style x:Key="FlatTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontFamily" Value="/Presentation/AppResources/Fonts/#Quicksand"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White" BorderThickness="2" BorderBrush="#585ab8">
        <Grid>
            <StackPanel>

                <!-- Tiêu đề -->
                <TextBlock Text="Thêm khách hàng"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           FontWeight="Bold"
                           Foreground="#585ab8"
                           FontSize="15"
                           FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>

                <!-- Form nhập liệu -->
                <Grid Style="{StaticResource DialogFormContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Tên khách hàng -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Tên khách hàng"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource FormReadOnlyInputBorder}"
                            Margin="0,5,0,5">
                        <TextBox x:Name="txtCustomerName"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Số điện thoại -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Số điện thoại"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource FormReadOnlyInputBorder}"
                            Margin="0,5,0,5">
                        <TextBox x:Name="txtPhone"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Email -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Email"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="2" Grid.Column="1"
                            Style="{StaticResource FormReadOnlyInputBorder}"
                            Margin="0,5,0,5">
                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Địa chỉ -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Địa chỉ"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,5"/>

                    <Border Grid.Row="3" Grid.Column="1"
                            Style="{StaticResource FormReadOnlyInputBorder}"
                            Margin="0,5,0,5">
                        <TextBox x:Name="txtAddress"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>
                </Grid>

                <!-- Nút Cập nhật / Hủy -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,10">
                    <Border Width="90" Height="28"
                            CornerRadius="5"
                            Background="#585ab8"
                            Margin="0,0,20,0">
                        <Button x:Name="btnUpdate"
                                Content="Cập nhật"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="White"
                                FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                Click="btnUpdate_Click"/>
                    </Border>

                    <Border Width="90" Height="28"
                            CornerRadius="5"
                            Background="#E9E9F5">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="#585ab8"
                                FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                Click="btnCancel_Click"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
