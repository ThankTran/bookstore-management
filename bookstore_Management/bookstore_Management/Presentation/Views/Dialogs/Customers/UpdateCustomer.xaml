<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.UpdateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Customers"
        xmlns:core="clr-namespace:bookstore_Management.Core.Enums"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Height="600" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider
            x:Key="BookCategoryValues"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:BookCategory"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Input Border Style -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#585AB8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Input TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" 
            Background="White" 
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            BlurRadius="30" 
                            ShadowDepth="8" 
                            Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#FF9800"
                    CornerRadius="20,20,0,0"
                    Padding="30,20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                                CornerRadius="10"
                                Width="45" Height="45"
                                Margin="0,0,15,0">
                            <TextBlock Text="✏️" 
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chỉnh sửa thông tin khách hàng" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Cập nhật các thông tin cần thiết" 
                                       FontSize="12"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Border Background="#F57C00"
                            CornerRadius="8"
                            Width="35" Height="35"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            ToolTip="Đóng">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Click="BtnClose_Click"
                                Cursor="Hand">
                            <TextBlock Text="✕" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <StackPanel>

                    <!-- Mã khách hàng -->

                    <StackPanel Grid.Column="0" Height="75">
                        <TextBlock Text="Mã khách hàng" Style="{StaticResource LabelStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip Content="Mã khách hàng không thể thay đổi"/>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Border Style="{StaticResource InputBorderStyle}"
                                    Background="#F5F5F5">
                            <Grid>
                                <TextBox x:Name="tbCustomerID"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             IsReadOnly="True"
                                             Foreground="#666666"
                                             FontWeight="SemiBold"/>
                                <TextBlock Text="🔒"
                                               FontSize="14"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Tên khách hàng -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tên khách hàng *" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <TextBox x:Name="tbCustomerName"
                                     Style="{StaticResource InputTextBoxStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- SĐT & Email -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180*"/>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="229*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Số điện thoại *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <TextBox x:Name="tbPhone"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         PreviewTextInput="NumericOnly_PreviewTextInput"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="23,0,0,0">
                            <TextBlock Text="Email *" Style="{StaticResource LabelStyle}"/>
                            <Border Style="{StaticResource InputBorderStyle}">
                                <TextBox x:Name="tbEmail"
                                         Style="{StaticResource InputTextBoxStyle}"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Địa chỉ -->

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Địa chỉ *" Style="{StaticResource LabelStyle}"/>
                        <Border Style="{StaticResource InputBorderStyle}">
                            <Grid>
                                <TextBox x:Name="tbAddress"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             />
                                <!-- PreviewTextInput="NumericOnly_PreviewTextInput" -->

                                <TextBlock Text="₫"
                                               FontSize="13"
                                               Foreground="#999999"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </StackPanel>



                    <!-- Status Info Card -->
                    <Border Background="#FFF3E0"
                            CornerRadius="12"
                            Padding="20"
                            BorderBrush="#FFB74D"
                            BorderThickness="1"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="📝" 
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Thông tin cập nhật" 
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#F57C00"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Ngày tạo: "
                                           FontSize="11"
                                           Foreground="#666666"
                                           Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           x:Name="txtCreatedDate"
                                           Text="01/01/2024"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#F57C00"
                                           Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Lần sửa cuối: "
                                           FontSize="11"
                                           Foreground="#666666"
                                           Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           x:Name="txtLastModified"
                                           Text="Chưa có"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#F57C00"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA"
                    CornerRadius="0,0,20,20"
                    Padding="30,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <TextBlock Text="*" 
                                   Foreground="#F44336"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Trường bắt buộc" 
                                   FontSize="12"
                                   Foreground="#999999"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!-- Cancel Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Click="BtnCancel_Click"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✕" 
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Hủy bỏ"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Update Button -->
                        <Border Background="#FF9800"
                                CornerRadius="10"
                                Padding="25,10"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF9800" 
                                                BlurRadius="15" 
                                                ShadowDepth="3" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Click="BtnUpdate_Click"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💾" 
                                               FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Cập nhật"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
