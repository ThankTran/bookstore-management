<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.EditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SizeToContent="WidthAndHeight">



    <!-- Style textbox phẳng -->
    <Window.Resources>
        <Style x:Key="FlatTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontFamily" Value="/Presentation/AppResources/Fonts/#Quicksand"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White" BorderThickness="2" BorderBrush="#585ab8">
        <Grid>
            <StackPanel HorizontalAlignment="Left" Width="456">

                <!-- Tiêu đề -->
                <TextBlock Text="Chỉnh sửa thông tin khách hàng"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           FontWeight="Bold"
                           Foreground="#585ab8"
                           FontSize="16"
                           FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>

                <!-- Form nhập liệu -->
                <Grid Margin="40,20,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mã khách hàng (readonly) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã khách hàng"
                               Margin="0,5,20,0"
                               FontWeight="Bold"
                               Foreground="#585ab8"
                               FontSize="13"
                               FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                               VerticalAlignment="Center"/>

                    <Border Grid.Row="0" Grid.Column="1"
                            Margin="0,5,0,0"
                            CornerRadius="5"
                            BorderBrush="#585ab8"
                            BorderThickness="1"
                            Width="250"
                            Height="28">
                        <TextBox x:Name="txtCustomerCode"
                                 Style="{StaticResource FlatTextBox}"
                                 IsReadOnly="True"
                                 Background="#F0F0F0"/>
                    </Border>

                    <!-- Tên khách hàng -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Tên khách hàng"
                               Margin="0,10,20,0"
                               FontWeight="Bold"
                               Foreground="#585ab8"
                               FontSize="13"
                               FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                               VerticalAlignment="Center"/>

                    <Border Grid.Row="1" Grid.Column="1"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="#585ab8"
                            BorderThickness="1"
                            Width="250"
                            Height="28">
                        <TextBox x:Name="txtCustomerName"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Số điện thoại -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Số điện thoại"
                               Margin="0,10,20,0"
                               FontWeight="Bold"
                               Foreground="#585ab8"
                               FontSize="13"
                               FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                               VerticalAlignment="Center"/>

                    <Border Grid.Row="2" Grid.Column="1"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="#585ab8"
                            BorderThickness="1"
                            Width="250"
                            Height="28">
                        <TextBox x:Name="txtPhone"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Email"
                               Margin="0,10,20,0"
                               FontWeight="Bold"
                               Foreground="#585ab8"
                               FontSize="13"
                               FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                               VerticalAlignment="Center"/>

                    <Border Grid.Row="3" Grid.Column="1"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="#585ab8"
                            BorderThickness="1"
                            Width="250"
                            Height="28">
                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Địa chỉ -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Địa chỉ"
                               Margin="0,10,20,0"
                               FontWeight="Bold"
                               Foreground="#585ab8"
                               FontSize="13"
                               FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                               VerticalAlignment="Center"/>

                    <Border Grid.Row="4" Grid.Column="1"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="#585ab8"
                            BorderThickness="1"
                            Width="250"
                            Height="28">
                        <TextBox x:Name="txtAddress"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>
                </Grid>

                <!-- Nút Cập nhật / Hủy -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,25,0,15">
                    <Border Width="90" Height="30"
                            CornerRadius="5"
                            Background="#585ab8"
                            Margin="0,0,20,0">
                        <Button x:Name="btnUpdate"
                                Content="Cập nhật"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="White"
                                FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                Cursor="Hand"
                                Click="btnUpdate_Click"/>
                    </Border>

                    <Border Width="90" Height="30"
                            CornerRadius="5"
                            Background="#E9E9F5">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="#585ab8"
                                FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                Cursor="Hand"
                                Click="btnCancel_Click"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>