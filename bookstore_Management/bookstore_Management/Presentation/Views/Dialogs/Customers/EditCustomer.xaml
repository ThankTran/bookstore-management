<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.EditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindow}"
        WindowStartupLocation="CenterOwner">

    <Border Style="{StaticResource DialogBorder}">
        <Grid>
            <StackPanel HorizontalAlignment="Left" Width="456">

                <!-- Tiêu đề -->
                <TextBlock Text="Chỉnh sửa thông tin khách hàng"
                           Style="{StaticResource DialogTitle}"/>

                <!-- Form nhập liệu -->
                <Grid Style="{StaticResource DialogFormContainer}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mã khách hàng (readonly) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã khách hàng"
                               Style="{StaticResource FormLabel}"
                               Margin="0,5,20,0"/>

                    <Border Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource FormReadOnlyInputBorder}"
                            Margin="0,5,0,0">
                        <TextBox x:Name="txtCustomerCode"
                                 Style="{StaticResource FlatTextBox}"
                                 IsReadOnly="True"/>
                    </Border>

                    <!-- Tên khách hàng -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Tên khách hàng"
                               Style="{StaticResource FormLabel}"/>

                    <Border Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}">
                        <TextBox x:Name="txtCustomerName"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Số điện thoại -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Số điện thoại"
                               Style="{StaticResource FormLabel}"/>

                    <Border Grid.Row="2" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}">
                        <TextBox x:Name="txtPhone"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Email"
                               Style="{StaticResource FormLabel}"/>

                    <Border Grid.Row="3" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}">
                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>

                    <!-- Địa chỉ -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Địa chỉ"
                               Style="{StaticResource FormLabel}"/>

                    <Border Grid.Row="4" Grid.Column="1"
                            Style="{StaticResource FormInputBorder}">
                        <TextBox x:Name="txtAddress"
                                 Style="{StaticResource FlatTextBox}"/>
                    </Border>
                </Grid>

                <!-- Nút Cập nhật / Hủy -->
                <StackPanel Style="{StaticResource DialogButtonContainer}">
                    <Border Style="{StaticResource PrimaryButtonBorder}"
                            Margin="0,0,20,0">
                        <Button x:Name="btnUpdate"
                                Content="Cập nhật"
                                Style="{StaticResource PrimaryButton}"
                                Click="btnUpdate_Click"/>
                    </Border>

                    <Border Style="{StaticResource SecondaryButtonBorder}">
                        <Button x:Name="btnCancel"
                                Content="Hủy"
                                Style="{StaticResource SecondaryButton}"
                                Click="btnCancel_Click"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>