<Window x:Class="bookstore_Management.Presentation.Views.Dialogs.Customers.InputCustomersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Dialogs.Books"
        mc:Ignorable="d"
        Height="205" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="15" Background="White" BorderThickness="2" BorderBrush="#585ab8">
        <Grid>
            <StackPanel>
                <!--content "sửa KH"-->
                <StackPanel>
                    <TextBlock Text="Chỉnh sửa thông tin khách hàng" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="15" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                </StackPanel>
                <!--textbox to input customers-->
                <StackPanel Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Mã khách hàng" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border ClipToBounds="True" CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="20,0,20,0" Width="200" Height="17.96">
                            <ComboBox Margin="0,0,1,0" BorderThickness="0" Foreground="DarkBlue" BorderBrush="Transparent">
                                <ComboBox.OpacityMask>
                                    <VisualBrush Visual="{Binding ElementName=Mask}"/>
                                </ComboBox.OpacityMask>
                                <ComboBoxItem>Skibidi</ComboBoxItem>
                                <ComboBoxItem>Toilet</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Tên khách hàng" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="17,0,20,0" Width="200">
                            <TextBox BorderThickness="0"  BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Số điện thoại" Margin="50,0,0,0" FontWeight="Bold" Foreground="#585ab8" FontSize="13" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                        <Border CornerRadius="5" BorderBrush="#585ab8" BorderThickness="1" Margin="33,0,20,0" Width="200">
                            <TextBox BorderThickness="0"  BorderBrush="Transparent" Margin="15,0,15,0"/>
                        </Border>
                    </StackPanel>

                </StackPanel>
                <!--update and cancel-->

                <StackPanel Margin="120,5,0,0" Orientation="Horizontal" Height="50" Width="275">
                    <Border Width="76" CornerRadius="5" Background="#585ab8" Height="25" Margin="55,0,0,0">
                        <Button Content="Cập nhật" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>

                    <Border Width="76" CornerRadius="5" Background="#E9E9F5" Height="25" Margin="25,0,0,0">
                        <Button Content="Hủy" FontWeight="SemiBold" FontSize="13" Background="Transparent" BorderBrush="Transparent" Foreground="#585ab8" FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>