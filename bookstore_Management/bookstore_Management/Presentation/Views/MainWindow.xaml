<Window x:Class="bookstore_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:bookstore_Management.Models"
    

        Title="Bookstore Management"
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Style cho nút bo góc + hiệu ứng hover -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                Padding="12,3">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Màu mặc định -->
            <Setter Property="Background" Value="#5858b5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,0"/>

            <!-- Hiệu ứng hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DE7E9E"/>
                    <!-- nền tím nhạt -->
                    <Setter Property="Foreground" Value="#7F81E5"/>
                    <!-- chữ tím đậm -->
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="#DE7E9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Infor button effect-->
        <Style x:Key="InforEffect" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="35"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9E9F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Logout button effect-->
        <Style x:Key="logoutEffect" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="2"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8a90c8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for user infor card  -->
        <Style x:Key="UserInforCardEffect" TargetType="Border">

            <Setter Property="CornerRadius" Value=" 12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#7577c3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="#FFFFFF" CornerRadius="20" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="302*"/>
                <RowDefinition Height="305*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="69*"/>
                <ColumnDefinition Width="325*"/>
                <ColumnDefinition Width="368*"/>
                <ColumnDefinition Width="519*"/>
            </Grid.ColumnDefinitions>
            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Top"
                       Margin="0,0,15,0"
                       Panel.ZIndex="100" Grid.Column="3">
                <Button x:Name="btnMinimize" 
                       Width="40" Height="30" 
                       Background="Transparent" 
                       BorderThickness="0"
                       Cursor="Hand"
                       ToolTip="Minimize"
                       Click="btnMinimize_Click">
                    <Image Source="/Presentation/AppResources/Images/Icons/Windowcontrol/winctr1.png" 
                          Width="18" Height="18" Stretch="Uniform"/>
                </Button>
                <Button x:Name="btnMaximize"
                       Width="40" Height="30" 
                       Background="Transparent" 
                       BorderThickness="0"
                       Cursor="Hand"
                       ToolTip="Maximize/Restore"
                       Click="btnMaximize_Click">
                    <Image Source="/Presentation/AppResources/Images/Icons/Windowcontrol/winctr2.png" 
                          Width="15" Height="15" Stretch="Uniform"/>
                </Button>
                <Button x:Name="btnClose"
                       Width="40" Height="30" 
                       Background="Transparent" 
                       BorderThickness="0"
                       Cursor="Hand"
                       ToolTip="Close"
                       Click="btnClose_Click">
                    <Image Source="/Presentation/AppResources/Images/Icons/Windowcontrol/winctr3.png" 
                          Width="25" Height="25" Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <Grid Grid.ColumnSpan="4" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" 
                       Background="#585AB8" 
                       CornerRadius="0,0,0,15" 
                       Margin="0,29.5,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo Section -->
                        <StackPanel Grid.Row="0" Margin="8,8,8,0">
                            <Grid Width="20" Height="20" 
                                  HorizontalAlignment="Left" 
                                  Margin="5,0,0,0">
                                <!-- Circular background -->
                                <!--<Ellipse Fill="#7577C3" 
                                        Width="20" 
                                        Height="20"/>-->
                                <Border CornerRadius="35" Background="#7577C3">
                                    <Button x:Name="btnI"  
                                            Style="{StaticResource InforEffect}" Click="btnI_Click" >
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/inf.png" 
                                               Width="14" 
                                               Height="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Button>
                                </Border>
                                <!-- Info icon -->

                            </Grid>
                            <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/THM.png" 
                                  Width="150" 
                                  Height="150"
                                  Stretch="Uniform"
                                  />
                        </StackPanel>

                        <!-- User Profile Section -->
                        <StackPanel Grid.Row="1" Margin="15,10,15,20">
                            <!-- Logout Button -->
                            <Button x:Name="btnLogout"
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand"
                                   Padding="0"
                                   Margin="5,0,0,12"
                                   Style="{StaticResource logoutEffect}" Click="btnLogout_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/DX.png" 
                                          Width="16" 
                                          Height="16"
                                          Margin="0,0,8,0"/>
                                    <TextBlock Text="Đăng xuất" 
                                              Foreground="White" 
                                              FontSize="13"
                                              FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- User Info Card -->
                            <Border 
                                   Style="{StaticResource UserInforCardEffect}">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="50" Height="50" 
                                           CornerRadius="25"
                                           Background="White"
                                           Margin="0,0,12,0">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/profile.png" 
                                              Width="50" 
                                              Height="50"
                                              Stretch="UniformToFill"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{x:Static models:SessionModel.RoleDisplay}"
                                                    FontSize="12" 
                                                      Foreground="White"
                                                      FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                      Opacity="0.85"
                                                      Margin="0,0,0,2"/>
                                        <TextBlock  Text="{x:Static models:SessionModel.Username}"
                                                  FontWeight="Bold" 
                                                  FontSize="13" 
                                                  Foreground="White"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  TextWrapping="Wrap"
                                                  MaxWidth="140"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Menu Items -->
                        <StackPanel Grid.Row="1" Margin="10,103,10,10" Grid.RowSpan="2">
                            <StackPanel Margin="10,0,10,0">

                                <!-- Home -->
                                <Button x:Name="btnHome"                                      
                                       Click="btnHome_Click"
                                       Style="{StaticResource RoundedButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/trangchu.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Trang chủ" 
                                                   Foreground="#FFFFFF"
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>

                                    </StackPanel>
                                </Button>

                                <!-- Payment -->
                                <Button x:Name="btnPayment"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnPayment_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/TT.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Thanh toán" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Customer -->
                                <Button x:Name="btnCustomer"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnCustomerManagement_Click" >

                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/QLKH.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Quản lý khách hàng" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!--Publishers-->
                                <Button x:Name="btnPublisher"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnPublisher_Click">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/QLHD.png" 
                                            Width="24" 
                                            Height="24"
                                            Margin="0,0,12,0"/>
                                        <TextBlock Text="Quản lý nhà xuất bản" 
                                            Foreground="#FFFFFF" 
                                            FontWeight="SemiBold" 
                                            FontSize="14"
                                            FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                            VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Books -->
                                <Button x:Name="btnBooks"
                                       Style="{StaticResource RoundedButtonStyle}"
                                       Click="btnBooks_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/QLS.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Quản lý sách" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Staffs -->
                                <Button x:Name="btnStaffs"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnStaffs_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/QLNS.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Quản lý nhân sự" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Statistics -->
                                <Button x:Name="btnStatistics"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnStatistics_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/TK.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Thống kê" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>


                                <!-- Bills -->
                                <Button x:Name="btnBills"
                                        Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnBills_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Sidebar/QLHD.png" 
                                              Width="24" 
                                              Height="24"
                                              Margin="0,0,12,0"/>
                                        <TextBlock Text="Hóa đơn" 
                                                  Foreground="#FFFFFF" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14"
                                                  FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Account -->
                                <Button x:Name="btnAccount"
                                       Style="{StaticResource RoundedButtonStyle}"
                                        Click="btnAccount_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image  Source="/Presentation/AppResources/Images/Icons/Sidebar/QLTK.png" 
                                                Width="24" 
                                                Height="24"
                                                Margin="0,0,12,0"/>
                                        <TextBlock  Text="Quản lý tài khoản" 
                                                    Foreground="#FFFFFF" 
                                                    FontWeight="SemiBold" 
                                                    FontSize="14"
                                                    FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                    VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Footer Info -->
                        <Border Grid.Row="3"
                               Background="#4A4C9E"
                               CornerRadius="10"
                               Padding="15"
                               Margin="15,0,15,15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="THM Bookstore" 
                                          FontSize="13" 
                                          FontFamily="/Presentation/AppResources/Fonts/#Quicksand" 
                                          Foreground="White" 
                                          HorizontalAlignment="Center" 
                                          FontWeight="Bold"/>
                                <TextBlock Text="Admin Manager" 
                                          FontSize="11" 
                                          FontFamily="/Presentation/AppResources/Fonts/#Quicksand" 
                                          Foreground="White" 
                                          HorizontalAlignment="Center" 
                                          FontWeight="SemiBold"
                                          Opacity="0.9"
                                          Margin="0,3,0,0"/>
                                <TextBlock Text="© 2025 All Rights Reserved" 
                                          FontSize="10" 
                                          FontFamily="/Presentation/AppResources/Fonts/#Quicksand" 
                                          Foreground="White" 
                                          HorizontalAlignment="Center"
                                          Opacity="0.8"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Border Grid.Column="1" 
                       Background="#E9E9F4" 
                       CornerRadius="0,0,15,0" 
                       Margin="0,29.5,0,0">
                    <Frame x:Name="MainFrame" 
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
