<Window x:Class="bookstore_Management.Presentation.Views.Users.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Presentation.Views.Users"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!--STYLE FOR LOGIN AND CANCEL BTN-->
        <Style x:Key="btnLoginEffect" TargetType="Button">
            <!--BorderThickness="0"-->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            CornerRadius="10"
                            BorderThickness="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!--Mặc định-->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>

            <!--effect khi mouseover-->
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F81E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#585ab8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="/Presentation/AppResources/Fonts/#Quicksand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7F81E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4F9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#585ab8"/>
            <Setter Property="FontFamily" Value="/Presentation/AppResources/Fonts/#Quicksand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#585ab8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E9E9F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- STYLE INPUT BOX -->
        <Style x:Key="InputBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#585ab8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--sTYLE FOR BORDER LOGIN-->
        <Style x:Key="loginGridEffect" TargetType="Border">
            <!--<Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
            <Setter Property="RenderTransform" >
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>-->
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#Ffffff" Offset="0.5"/>
                                <GradientStop Color="#7F81E5" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <!--<Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>-->
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="login2GridEffect" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#8a90c8" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseMove">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Animate EndPoint.Y từ 0 sang 1 -->
                            <PointAnimation Storyboard.TargetProperty="Background.(LinearGradientBrush.EndPoint)"
                                    To="0,1" Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Quay lại trạng thái ban đầu -->
                            <PointAnimation Storyboard.TargetProperty="Background.(LinearGradientBrush.EndPoint)"
                                    To="1,0.3" Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="/Presentation/AppResources/Images/Icons/Login/logInBG.png"/>
    </Window.Background>
    <Grid>
        <!--name and quotes-->
        <StackPanel Margin="96,88,430,305">
            <TextBlock Text="Organizing the world, one book at a time." 
                       FontWeight="Light" 
                       Foreground="White" 
                       FontStyle="Italic" 
                       FontSize="10" 
                       FontFamily="/Presentation/AppResources/Fonts/#Quicksand" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="THM BOOKSTORE MANAGEMENT" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       FontSize="17" 
                       FontFamily="/Presentation/AppResources/Fonts/#Quicksand"/>
        </StackPanel>
        <!--Login-->
        <!--<Border Margin="84,63,92,54" Style="{StaticResource loginGridEffect}">-->

        <!--</Border>-->
        <Border Margin="454,88,105,67"
                CornerRadius="20" 
                Style="{StaticResource login2GridEffect}">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                            BlurRadius="20"
                            ShadowDepth="10"
                            Direction="315"
                            Opacity="0.4"/>
            </Border.Effect>
            <Grid>
                <!-- Login Header -->



                <StackPanel Margin="0,4,0,1">
                    <TextBlock Text="Welcome Back!"
                              FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                              FontWeight="Bold"
                              FontSize="27"
                              Foreground="#333333"
                              Margin="0,0,0,4" 
                               Width="205"/>

                    <TextBlock Text="Please login to continue"
                              FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                              FontSize="14"
                              Foreground="#999999"
                              Margin="0,0,0,15" Width="155"/>
                    <!-- Username Input -->
                    <TextBlock Text="Username"
                              FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                              FontWeight="Medium"
                              FontSize="13"
                              Foreground="#555555"
                              Margin="0,0,0,8" Width="220"/>

                    <Border Style="{StaticResource InputBox}"
                            Height="30"
                            Margin="0,0,0,10" 
                            Width="220">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Presentation/AppResources/Images/Icons/Login/user.png"
                                  Width="15"
                                  Height="15"
                                  Grid.Column="0"
                                  Opacity="0.6"/>

                            <TextBox x:Name="txtUsername"
                                    Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Enter your username"
                                                                          Foreground="#CCCCCC"
                                                                          FontSize="14"
                                                                          FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                                                          Margin="5,0,0,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>



                    <!-- Password Input -->
                    <TextBlock Text="Password"
                              FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                              FontWeight="Medium"
                              FontSize="13"
                              Foreground="#555555"
                              Margin="0,0,0,8"
                               Width="220"/>

                    <Border Style="{StaticResource InputBox}"
                            Height="30"
                            Margin="0,0,0,18"
                            Width="220">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Presentation/AppResources/Images/Icons/Login/lock.png"
                                  Width="15"
                                  Height="15"
                                  Grid.Column="0"
                                  Opacity="0.6"/>

                            <PasswordBox x:Name="pbPassword"
                                        Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontFamily="/Presentation/AppResources/Fonts/#Quicksand"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"/>

                            <!-- TextBox (hiện) -->
                            <TextBox x:Name="tbPasswordVisible"
                                     Grid.Column="1"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     VerticalAlignment="Center"
                                     Visibility="Collapsed"/>

                            <!-- Eye button -->
                            <Button Grid.Column="1"
                                    Width="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="👁"
                                    FontSize="14"
                                    Click="TogglePassword_Click" Margin="148,0,0,0"/>
                        </Grid>

                    </Border>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin"
                            Content="LOGIN"
                            Style="{StaticResource PrimaryButton}"
                            Height="30"
                            Margin="0,0,0,10"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=pbPassword}"                             Width="220"/>
                    <!--   -->
                    <!-- Cancel Button -->
                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Height="30"
                            Click="btnCancelLogin_Click"
                            Width="220"/>


                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
