<UserControl x:Class="bookstore_Management.Presentation.Views.Users.AccountListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Add Button and Search -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add Button -->
                <Button x:Name="btnAdd"
                        Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        HorizontalAlignment="Left"
                        ToolTip="Thêm tài khoản mới">
                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                           Width="30" 
                           Height="30"/>
                </Button>

                <!-- Search Bar -->
                <Border Grid.Column="2" 
                        Style="{StaticResource SearchBorderContainer}"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                                 Grid.Column="0"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="Tìm kiếm tài khoản..."/>

                        <Button Grid.Column="1"
                                Style="{StaticResource SearchButton}">
                            <Image Source="/Presentation/AppResources/Images/Icons/Actions/search.png" 
                                   Width="15" 
                                   Height="15"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" 
                    Style="{StaticResource DataGridContainerBorder}">
                <DataGrid x:Name="dgAccounts"
                          Style="{StaticResource MainDataGrid}">

                    <!-- Custom ScrollBar Style -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                    </DataGrid.Resources>

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                            Binding="{Binding STT}" 
                                            Width="60"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Mã nhân viên (UserId) -->
                        <DataGridTextColumn Header="Mã NV" 
                                            Binding="{Binding UserId}" 
                                            Width="100"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource PrimaryColorCell}"/>

                        <!-- Tên đăng nhập (Username) -->
                        <DataGridTextColumn Header="Tên đăng nhập" 
                                            Binding="{Binding Username}" 
                                            Width="*"
                                            MinWidth="150"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="*"
                                            MinWidth="200"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Role -->
                        <DataGridTemplateColumn Header="Chức vụ" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="0">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="1">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="2">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding RoleDisplay}"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="0">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="1">
                                                            <Setter Property="Foreground" Value="#1976D2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="2">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ngày tạo (CreatedDate) -->
                        <DataGridTextColumn Header="Ngày tạo" 
                                            Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" 
                                            Width="120"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Trạng thái -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Sửa -->
                        <DataGridTemplateColumn Header="Sửa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/edit.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Khóa/Mở khóa -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="{Binding StatusTooltip}">
                                        <Image Width="20" Height="20">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Source" Value="/Presentation/AppResources/Images/Icons/Actions/lock.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Source" Value="/Presentation/AppResources/Images/Icons/Actions/unlock.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Reset mật khẩu -->
                        <DataGridTemplateColumn Header="Reset" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="Reset mật khẩu">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/reset.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>