<UserControl x:Class="bookstore_Management.Presentation.Views.Users.AccountListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Add Button and Search -->
            <Grid Grid.Row="0" Margin="0,-5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add Button (Icon Only) -->
                <Button x:Name="btnAdd"
                        Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        HorizontalAlignment="Left"
                        ToolTip="Thêm nhà xuất bản mới"
                        Command="{Binding AddPublisherCommand}">
                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                           Width="30" 
                           Height="30"/>
                </Button>

                <!-- Search Bar -->
                <Border Grid.Column="2" 
                        Style="{StaticResource SearchBorderContainer}"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                                 Grid.Column="0"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="Tìm kiếm ..."/>

                        <Button Grid.Column="1"
                                Style="{StaticResource SearchButton}">
                            <Image Source="/Presentation/AppResources/Images/Icons/Actions/search.png" 
                                   Width="15" 
                                   Height="15"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" 
                    Style="{StaticResource DataGridContainerBorder}">
                <DataGrid x:Name="dgPublishers"
                          Style="{StaticResource MainDataGrid}"
                          ItemsSource="{Binding Publishers}">

                    <!-- Custom ScrollBar Style -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                    </DataGrid.Resources>

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                            Binding="{Binding STT}" 
                                            Width="60"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Mã NV -->
                        <DataGridTextColumn Header="Mã nhân viên" 
                                            Binding="{Binding MaNXB}" 
                                            Width="120"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource PrimaryColorCell}"/>

                        <!-- Tên nhân viên -->
                        <DataGridTextColumn Header="Tên nhân viên" 
                                            Binding="{Binding TenNXB}" 
                                            Width="*"
                                            MinWidth="180"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Username -->
                        <DataGridTextColumn Header="Tên đăng nhập TK" 
                                            Binding="{Binding SDT}" 
                                            Width="140"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Password -->
                        <DataGridTextColumn Header="Password" 
                                            Binding="{Binding NgayKhoiTao}" 
                                            Width="*"
                                            MinWidth="200"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Role -->
                        <DataGridTextColumn Header="Chức vụ" 
                                            Binding="{Binding Email}" 
                                            Width="*"
                                            MinWidth="200"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>


                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="*"
                                            MinWidth="200"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>


                        <!-- Sửa -->
                        <DataGridTemplateColumn Header="Sửa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                        Command="{Binding DataContext.EditPublisherCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/edit.png" 
                                           Width="20" 
                                           Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Xóa -->
                        <DataGridTemplateColumn Header="Xóa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                        Command="{Binding DataContext.DeletePublisherCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/recyclebin.png" 
                                           Width="20" 
                                           Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>

