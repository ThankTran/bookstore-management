<UserControl x:Class="bookstore_Management.Presentation.Views.Users.AccountListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <TextBlock Grid.Row="0"
                       Text="QUẢN LÝ TÀI KHOẢN"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,20"/>

            <!-- Action Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Actions Group -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                    <!-- Add Button -->
                    <Border Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#585AB8" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Button x:Name="btnAdd"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="15,8"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Thêm tài khoản" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Divider -->
                    <Border Width="1" 
                            Background="#E0E0E0"
                            Margin="5,5,15,5"/>

                    <!-- Print Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button x:Name="btnPrint"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="In danh sách"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/print.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="In" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Export Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button x:Name="btnExport"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="Xuất Excel"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/export.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Xuất Excel" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>

                <!-- Search Bar - Right Aligned -->
                <Border Grid.Column="2"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="15,8"
                        Width="320"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Image Grid.Column="0"
                               Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                               Width="18" 
                               Height="18"
                               Margin="0,0,10,0"
                               Opacity="0.5"/>

                        <!-- Search TextBox -->
                        <TextBox x:Name="txtSearch"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 FontSize="13"
                                 Foreground="#666666"
                                 FontFamily="{StaticResource PrimaryFont}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Tìm kiếm theo tên, email, mã NV..." 
                                                                       Foreground="#999999" 
                                                                       FontSize="13"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Clear Button -->
                        <Button Grid.Column="2"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Visibility="{Binding ElementName=txtSearch, Path=Text.Length, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="✕" 
                                       Foreground="#999999"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid Section -->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="3" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header Info -->
                    <Border Grid.Row="0"
                            Background="{StaticResource SecondaryLightBrush}"
                            CornerRadius="15,15,0,0"
                            Padding="20,12">
                        <Grid>
                            <TextBlock Text="Danh sách tài khoản"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <TextBlock Text="Tổng số: "
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Accounts.Count}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                                <TextBlock Text=" tài khoản"
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              x:Name="dgAccounts"
                              Style="{StaticResource MainDataGrid}"
                              Margin="0">

                        <DataGrid.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- STT -->
                            <DataGridTextColumn Header="STT" 
                                                Binding="{Binding STT}" 
                                                Width="60"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Mã nhân viên -->
                            <DataGridTextColumn Header="Mã NV" 
                                                Binding="{Binding UserId}" 
                                                Width="100"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Tên đăng nhập -->
                            <DataGridTextColumn Header="Tên đăng nhập" 
                                                Binding="{Binding Username}" 
                                                Width="*"
                                                MinWidth="160"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Email -->
                            <DataGridTemplateColumn Header="Email" Width="240">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#E3F2FD"
                                                CornerRadius="6"
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📧" 
                                                           FontSize="12"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Email}"
                                                           FontSize="12"
                                                           Foreground="#1976D2"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Chức vụ -->
                            <DataGridTemplateColumn Header="Chức vụ" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" 
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="0">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="1">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="2">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding RoleDisplay}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="0">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="1">
                                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="2">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Ngày tạo -->
                            <DataGridTemplateColumn Header="Ngày tạo" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0"
                                                CornerRadius="6"
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <TextBlock Text="{Binding CreatedDate, StringFormat=dd/MM/yyyy}"
                                                       FontSize="11"
                                                       Foreground="#F57C00"
                                                       FontWeight="Medium"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Trạng thái -->
                            <DataGridTemplateColumn Header="Trạng thái" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" 
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusDisplay}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Thao tác -->
                            <DataGridTemplateColumn Header="Thao tác" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <!-- Edit Button -->
                                            <Border Background="#E8F5E9"
                                                    CornerRadius="6"
                                                    Margin="0,0,5,0"
                                                    Cursor="Hand"
                                                    ToolTip="Chỉnh sửa">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32">
                                                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/edit.png" 
                                                           Width="16" 
                                                           Height="16"/>
                                                </Button>
                                            </Border>

                                            <!-- Lock/Unlock Button -->
                                            <Border CornerRadius="6"
                                                    Margin="0,0,5,0"
                                                    Cursor="Hand">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32"
                                                        ToolTip="{Binding StatusTooltip}">
                                                    <Image Width="16" Height="16">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                        <Setter Property="Source" Value="/Presentation/AppResources/Images/Icons/Actions/lock.png"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                        <Setter Property="Source" Value="/Presentation/AppResources/Images/Icons/Actions/unlock.png"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </Button>
                                            </Border>

                                            <!-- Reset Password Button -->
                                            <Border Background="#E3F2FD"
                                                    CornerRadius="6"
                                                    Cursor="Hand"
                                                    ToolTip="Reset mật khẩu">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32">
                                                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/reset.png" 
                                                           Width="16" 
                                                           Height="16"/>
                                                </Button>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Footer/Pagination Area -->
                    <Border Grid.Row="2"
                            Background="#FAFAFA"
                            CornerRadius="0,0,15,15"
                            Padding="20,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <TextBlock Text="🔐" 
                                           FontSize="14"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Quản lý tài khoản người dùng và phân quyền hệ thống"
                                           FontSize="12"
                                           Foreground="#999999"
                                           FontStyle="Italic"/>
                            </StackPanel>

                            <TextBlock HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#666666">
                                <Run Text="Hiển thị"/>
                                <!-- Text="{Binding Accounts.Count}" -->
                                <Run 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                                <Run Text="tài khoản"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>