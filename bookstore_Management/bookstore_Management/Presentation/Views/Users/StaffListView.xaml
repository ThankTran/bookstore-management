<UserControl x:Class="bookstore_Management.Presentation.Views.Users.StaffListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Add Button and Search -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add Button -->
                <Button x:Name="btnAdd"
                        Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        HorizontalAlignment="Left"
                        ToolTip="Thêm nhân viên mới">
                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                           Width="30" 
                           Height="30"/>
                </Button>

                <!-- Search Bar -->
                <Border Grid.Column="2" 
                        Style="{StaticResource SearchBorderContainer}"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                                 Grid.Column="0"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="Tìm kiếm nhân viên..."/>

                        <Button Grid.Column="1"
                                Style="{StaticResource SearchButton}">
                            <Image Source="/Presentation/AppResources/Images/Icons/Actions/search.png" 
                                   Width="15" 
                                   Height="15"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" 
                    Style="{StaticResource DataGridContainerBorder}">
                <DataGrid x:Name="dgStaff"
                          Style="{StaticResource MainDataGrid}">

                    <!-- Custom ScrollBar Style -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                    </DataGrid.Resources>

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                            Binding="{Binding STT}" 
                                            Width="60"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Mã nhân viên (Id) -->
                        <DataGridTextColumn Header="Mã NV" 
                                            Binding="{Binding Id}" 
                                            Width="100"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource PrimaryColorCell}"/>

                        <!-- Tên nhân viên (Name) -->
                        <DataGridTextColumn Header="Tên nhân viên" 
                                            Binding="{Binding Name}" 
                                            Width="*"
                                            MinWidth="180"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Số điện thoại (Phone) -->
                        <DataGridTextColumn Header="Số điện thoại" 
                                            Binding="{Binding Phone}" 
                                            Width="120"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- CCCD (CitizenIdCard) -->
                        <DataGridTextColumn Header="CCCD" 
                                            Binding="{Binding CitizenIdCard}" 
                                            Width="140"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Lương cơ bản (BaseSalary) -->
                        <DataGridTextColumn Header="Lương cơ bản" 
                                            Binding="{Binding BaseSalary, StringFormat={}{0:N0} đ}" 
                                            Width="140"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>

                        <!-- Hệ số lương (SalaryRate) -->
                        <DataGridTextColumn Header="Hệ số" 
                                            Binding="{Binding SalaryRate, StringFormat={}{0:F2}}" 
                                            Width="80"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Role -->
                        <DataGridTemplateColumn Header="Chức vụ" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="0">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="1">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="2">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="3">
                                                        <Setter Property="Background" Value="#F3E5F5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding RoleDisplay}"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="0">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="1">
                                                            <Setter Property="Foreground" Value="#1976D2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="2">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="3">
                                                            <Setter Property="Foreground" Value="#7B1FA2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Trạng thái (Status) -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="0">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="1">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="2">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="0">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="1">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="2">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Sửa -->
                        <DataGridTemplateColumn Header="Sửa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="Sửa thông tin nhân viên">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/edit.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Xóa -->
                        <DataGridTemplateColumn Header="Xóa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="Xóa nhân viên">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/recyclebin.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>