<UserControl x:Class="bookstore_Management.Views.Customers.CustomerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Return Button -->
        <Grid Grid.Row="0" Margin="0,-16,0,15">
            <Button x:Name="btnReturn"
                    Style="{StaticResource ReturnButton}"
                    Click="btnReturn_Click"
                    ToolTip="Quay lại danh sách">
                <Image Source="/Presentation/AppResources/Images/Icons/return.png" 
                       Width="15" 
                       Height="15"/>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Border Grid.RowSpan="2"
                Background="{StaticResource WhiteBrush}"
                CornerRadius="15"
                Padding="30"
                Margin="0,24,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Tiêu đề -->
                    <TextBlock Text="Chi tiết khách hàng"
                               Style="{StaticResource DetailPageTitle}"/>

                    <!-- Thông tin khách hàng -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cột trái -->
                        <StackPanel Grid.Column="0">
                            <!-- Mã khách hàng -->
                            <TextBlock Text="Mã khách hàng" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtMaKH"
                                       Text="KH001"
                                       Style="{StaticResource DetailCustomerCode}"/>

                            <!-- Tên khách hàng -->
                            <TextBlock Text="Tên khách hàng" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtTenKH"
                                       Text="Nguyễn Văn A"
                                       Style="{StaticResource DetailFieldValue}"/>

                            <!-- Số điện thoại -->
                            <TextBlock Text="Số điện thoại" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtSDT"
                                       Text="0123456789"
                                       Style="{StaticResource DetailFieldValue}"/>

                            <!-- Email -->
                            <TextBlock Text="Email"
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtEmail"
                                       Text="email@example.com"
                                       Style="{StaticResource DetailFieldValue}"/>
                        </StackPanel>

                        <!-- Cột phải -->
                        <StackPanel Grid.Column="2">
                            <!-- Địa chỉ -->
                            <TextBlock Text="Địa chỉ" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtDiaChi"
                                       Text="123 Nguyễn Văn Linh, Q7, TP.HCM"
                                       Style="{StaticResource DetailFieldValue}"
                                       TextWrapping="Wrap"/>

                            <!-- Tổng doanh thu -->
                            <TextBlock Text="Tổng doanh thu" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtDoanhThu"
                                       Text="1,000,000 VNĐ"
                                       Style="{StaticResource DetailRevenue}"/>

                            <!-- Hạng thành viên -->
                            <TextBlock Text="Hạng thành viên" 
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtHangThanhVien"
                                       Text="Vàng"
                                       Style="{StaticResource DetailFieldValue}"/>

                            <!-- Điểm tích lũy -->
                            <TextBlock Text="Điểm tích lũy"
                                       Style="{StaticResource DetailFieldLabel}"/>
                            <TextBlock x:Name="txtDiemTichLuy"
                                       Text="1500 điểm"
                                       Style="{StaticResource DetailFieldValue}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Separator -->
                    <Border Style="{StaticResource SeparatorBorder}"/>

                    <!-- Lịch sử mua hàng -->
                    <TextBlock Text="Lịch sử mua hàng" 
                               Style="{StaticResource DetailSectionTitle}"/>

                    <Border Style="{StaticResource HistoryDataGridBorder}">
                        <DataGrid x:Name="dgHistories"
                                  Style="{StaticResource HistoryDataGrid}">

                            <DataGrid.Columns>
                                <!-- STT -->
                                <DataGridTextColumn Header="STT" 
                                                   Binding="{Binding STT}" 
                                                   Width="60"
                                                   ElementStyle="{StaticResource CenterAlignedCell}"/>

                                <!-- Mã hóa đơn -->
                                <DataGridTextColumn Header="Mã hóa đơn" 
                                                   Binding="{Binding MaHD}" 
                                                   Width="120"
                                                   ElementStyle="{StaticResource PrimaryColorCell}"/>

                                <!-- Tổng tiền -->
                                <DataGridTextColumn Header="Tổng tiền" 
                                                   Binding="{Binding TongTien}" 
                                                   Width="150"
                                                   ElementStyle="{StaticResource RightAlignedCell}"/>

                                <!-- Ngày mua hàng -->
                                <DataGridTextColumn Header="Ngày mua hàng" 
                                                   Binding="{Binding NgayMuaHang}" 
                                                   Width="150"
                                                   ElementStyle="{StaticResource CenterAlignedCell}"/>

                                <!-- Ghi chú -->
                                <DataGridTextColumn Header="Ghi chú" 
                                                   Binding="{Binding GhiChu}" 
                                                   Width="*" 
                                                   MinWidth="150"
                                                   ElementStyle="{StaticResource TextWrapCell}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>