<Window x:Name="CustomerViewWindow" x:Class="bookstore_Management.Views.Customers.CustomerListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore_Management.Views.Customers"
        mc:Ignorable="d"
        Title="CustomerListView"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="326"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDEBAR -->
            <Border Grid.Column="0"
            Background="#585ab8"
            CornerRadius="50,0,0,50"
            Padding="5">
                <StackPanel>
                    

                    <!-- Menu Item -->
                    <!-- Trang chủ -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                    Margin="0,0,0,8" Width="231">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/trangchu.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Trang chủ" 
                                       VerticalAlignment="Center" 
                                       FontFamily="Quicksand Medium" 
                                       FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Quản Lý Khách Hàng -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                    Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/QLKH.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Quản Lý Khách Hàng" 
                                       VerticalAlignment="Center" 
                                       FontFamily="Quicksand Medium" 
                                       FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Quản Lý Sách-->
                    <Button Style="{StaticResource MenuButtonStyle}"
                    Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/QLS.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Quản Lý Sách" 
                                       VerticalAlignment="Center" 
                                       FontFamily="Quicksand Medium" 
                                       FontSize="18"/>  
                        </StackPanel>
                    </Button>

                    <!-- Quản Lý Nhân Sự -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/QLNS.png"
                                   Margin="0,0,30,0"/>      
                            <TextBlock Text="Quản Lý Nhân Sự " 
                                       VerticalAlignment="Center"
                                       FontFamily="Quicksand Medium"
                                       FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Thống kê -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/TK.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Thống kê" 
                                       VerticalAlignment="Center"
                                       FontFamily="Quicksand Medium"
                                       FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Quản Lý Kho Hàng -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/QLKHO.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Quản Lý Kho Hàng" 
                                       VerticalAlignment="Center"
                                       FontFamily="Quicksand Medium"
                                       FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <!-- Quản Lý Hóa Đơn -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="64" Height="64"
                                   Source="/Presentation/AppResources/Images/Icons/QLHD.png"
                                   Margin="0,0,30,0"/>
                            <TextBlock Text="Thống kê" 
                                       VerticalAlignment="Center"
                                       FontFamily="Quicksand Medium"
                                       FontSize="18"/>  
                        </StackPanel>
                    </Button>
                    
                    <!-- Bottom Section -->
                    <Border Background="#30FFFFFF"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,300,0,0"
                    VerticalAlignment="Bottom">
                        <StackPanel>
                            <TextBlock Text="👤 Admin User"
                             Foreground="White"
                             FontWeight="SemiBold"
                             Margin="0,0,0,5"/>
                            <TextBlock Text="admin@bookstore.com"
                             Foreground="#A0FFFFFF"
                             FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <!-- LEFT SIDEBAR -->
            

        </Grid>
    </Border>
</Window>
