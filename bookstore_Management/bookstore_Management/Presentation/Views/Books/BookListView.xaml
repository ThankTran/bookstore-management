<UserControl x:Class="bookstore_Management.Views.Books.BookListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,15,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <TextBlock Grid.Row="0"
                       Text="QUẢN LÝ SÁCH"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,20"/>

            <!-- Action Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Actions Group -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                    <!-- Add Button -->
                    <Border Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#585AB8" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Button x:Name="btnAdd"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="15,8"
                                Command="{Binding AddBookCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Thêm sách mới" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Divider -->
                    <Border Width="1" 
                            Background="#E0E0E0"
                            Margin="5,5,15,5"/>

                    <!-- Print Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button x:Name="btnPrint"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="In danh sách"
                                Command="{Binding PrintCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/print.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="In" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Export Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button x:Name="btnExport"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="Xuất Excel"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/export.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Xuất Excel" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>

                <!-- Search Bar - Right Aligned -->
                <Border Grid.Column="2"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="15,8"
                        Width="320"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Button BorderThickness="0" 
                                Background="Transparent"
                                Command="{Binding SearchBookCommand}">
                            <Image Grid.Column="0"
                                   Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                                   Width="18" 
                                   Height="18"
                                   Margin="0,0,10,0"
                                   Opacity="0.5"/>
                        </Button>

                        <!-- Search TextBox -->
                        <TextBox x:Name="txtSearch"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalContentAlignment="Center"
                        FontSize="13"
                        Foreground="#666666"
                        FontFamily="{StaticResource PrimaryFont}"
                        Text="{ Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Tìm kiếm theo tên sách, tác giả, mã sách..." 
                                                                       Foreground="#999999" 
                                                                       FontSize="13"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Clear Button -->
                        <Button Grid.Column="2"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding LoadData}"
                                Visibility="{Binding ElementName=txtSearch, Path=Text.Length, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="X"
                                        Foreground="#999999"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid Section -->
            <Border Grid.Row="2"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="0"
                    CornerRadius="15">
                
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="3" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header Info -->
                    <Border Grid.Row="0"
                            Background="{StaticResource SecondaryLightBrush}"
                            CornerRadius="15,15,0,0"
                            Padding="20,12">
                        <Grid>
                            <TextBlock Text="Danh sách sách"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <TextBlock Text="Tổng số: "
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Books.Count}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                                <TextBlock Text=" đầu sách"
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              x:Name="dgBooks"
                              Style="{StaticResource MainDataGrid}"
                              ItemsSource="{Binding Books}"
                              SelectedItem="{Binding SelectedBook}"
                              LoadingRow="DataGrid_LoadingRow"
                              Margin="0">

                        <DataGrid.Resources>
                            <Style TargetType="ScrollBar" 
                                   BasedOn="{StaticResource DataGridScrollBar}"/>
                        </DataGrid.Resources>
                        

                        <DataGrid.Columns>
                            <!-- STT -->
                            <DataGridTextColumn Header="STT" 
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" 
                                                Width="Auto"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Mã sách -->
                            <DataGridTextColumn Header="Mã sách" 
                                                Binding="{Binding BookId}" 
                                                Width="Auto"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Tên sách -->
                            <DataGridTextColumn Header="Tên sách" 
                                                Binding="{Binding Name}" 
                                                Width="Auto"
                                                MinWidth="200"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Tác giả -->
                            <DataGridTextColumn Header="Tác giả" 
                                                Binding="{Binding Author}" 
                                                Width="Auto"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                        <Setter Property="FontStyle" Value="Italic"/>
                                        <Setter Property="Foreground" Value="#546E7A"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Nhà xuất bản -->
                            <DataGridTextColumn Header="Nhà xuất bản" 
                                                Binding="{Binding Publisher.Name}" 
                                                Width="Auto"
                                                IsReadOnly="True"
                                                ElementStyle="{StaticResource CenterAlignedCell}"/>

                            <!-- Thể loại -->
                            <DataGridTemplateColumn Header="Thể loại" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" 
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Category}" Value="Văn học">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Category}" Value="Khoa học">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Category}" Value="Kinh tế">
                                                            <Setter Property="Background" Value="#F3E5F5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Category}" Value="Thiếu nhi">
                                                            <Setter Property="Background" Value="#FCE4EC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#1976D2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Category}" Value="Văn học">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Category}" Value="Khoa học">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Category}" Value="Kinh tế">
                                                                <Setter Property="Foreground" Value="#7B1FA2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Category}" Value="Thiếu nhi">
                                                                <Setter Property="Foreground" Value="#C2185B"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Giá bán -->
                            <DataGridTextColumn Header="Giá bán" 
                                                Binding="{Binding SalePrice, StringFormat={}{0:N0} ₫}" 
                                                Width="Auto"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- Số lượng tồn kho -->
                            <DataGridTextColumn Header="Tồn kho" 
                                                Binding="{Binding Stock}" 
                                                Width="Auto"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Thao tác" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <!-- Edit Button -->
                                            <Border Background="#E8F5E9"
                                                    CornerRadius="6"
                                                    Margin="0,0,5,0"
                                                    Cursor="Hand"
                                                    ToolTip="Chỉnh sửa">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32"
                                                        Command="{Binding DataContext.EditBookCommand,
                                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/edit.png" 
                                                           Width="16" 
                                                           Height="16"/>
                                                </Button>
                                            </Border>

                                            <!-- Delete Button -->
                                            <Border Background="#FFEBEE"
                                                    CornerRadius="6"
                                                    Cursor="Hand"
                                                    ToolTip="Xóa">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32"
                                                        Command="{Binding DataContext.RemoveBookCommand,
                                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/recyclebin.png" 
                                                           Width="16" 
                                                           Height="16"/>
                                                </Button>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Footer/Pagination Area -->
                    <Border Grid.Row="2"
                            Background="#FAFAFA"
                            CornerRadius="0,0,15,15"
                            Padding="20,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center">
                                <Run Text="📖 Quản lý thông tin sách"
                                     FontSize="12"
                                     Foreground="#999999"
                                     FontStyle="Italic"/>
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#666666">
                                <Run Text="Hiển thị"/>
                                <!--Text="{Binding Books.Count}" -->
                                <Run 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                                <Run Text="đầu sách"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>