<UserControl x:Class="bookstore_Management.Views.Books.BookListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Background="{StaticResource BackgroundBrush}">
    <Border Background="{StaticResource BackgroundBrush}"
        CornerRadius="0,0,10,0"
        ClipToBounds="True">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Add Button and Search -->
            <Grid Grid.Row="0" Margin="0,-5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add Button (Icon Only) -->
                <Button x:Name="btnAdd"
                Grid.Column="0"
                Style="{StaticResource IconButton}"
                HorizontalAlignment="Left"
                ToolTip="Thêm sách mới"
                Command="{Binding AddBookCommand}">
                    <Image Source="/Presentation/AppResources/Images/Icons/add.png" 
                   Width="30" 
                   Height="30"/>
                </Button>

                <!-- Search Bar -->
                <Border Grid.Column="2" 
                Style="{StaticResource SearchBorderContainer}"
                HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                         Grid.Column="0"
                         Style="{StaticResource SearchTextBox}"/>

                        <Button Grid.Column="1"
                        Style="{StaticResource SearchButton}">
                            <Image Source="/Presentation/AppResources/Images/Icons/search.png" 
                           Width="15" 
                           Height="15"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" 
            Style="{StaticResource DataGridContainerBorder}">
                <DataGrid x:Name="dgBooks"
                  Style="{StaticResource MainDataGrid}"
                  ItemsSource="{Binding Books}">

                    <!-- Custom ScrollBar Style -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                    </DataGrid.Resources>

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                    Binding="{Binding bookSTT}" 
                                    Width="60"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Mã sách -->
                        <DataGridTextColumn Header="Mã sách" 
                                    Binding="{Binding bookID}" 
                                    Width="120"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource PrimaryColorCell}"/>

                        <!-- Tên tác giả -->
                        <DataGridTextColumn Header="Tên tác giả" 
                                    Binding="{Binding author}" 
                                    Width="*"
                                    MinWidth="180"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Tên sách -->
                        <DataGridTextColumn Header="Tên sách" 
                                    Binding="{Binding name}" 
                                    Width="*"
                                    MinWidth="180"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Nhà xuất bản -->
                        <DataGridTextColumn Header="Nhà xuất bản" 
                                    Binding="{Binding publisher}" 
                                    Width="140"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Giá bán -->
                        <DataGridTextColumn Header="Giá bán" 
                                    Binding="{Binding salePrice}" 
                                    Width="120"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Sửa -->
                        <DataGridTemplateColumn Header="Sửa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}">
                                        <Image Source="/Presentation/AppResources/Images/Icons/edit.png" 
                                       Width="20" 
                                       Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Xóa -->
                        <DataGridTemplateColumn Header="Xóa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}">
                                        <Image Source="/Presentation/AppResources/Images/Icons/recyclebin.png" 
                                       Width="20" 
                                       Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>
