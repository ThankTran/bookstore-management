<UserControl x:Class="bookstore_Management.Presentation.Views.Payment.ImportDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="15"
                Padding="30"
                Margin="20,20,20,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                BlurRadius="20" 
                                ShadowDepth="5" 
                                Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Back Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <!-- Back Button -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="10"
                                Width="40" Height="40"
                                Margin="0,0,15,0"
                                Cursor="Hand"
                                >
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click = "BtnBack_Click">
                                <TextBlock Text="←" 
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chi tiết Phiếu Nhập" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock x:Name="txtImportBillId"
                                       Text="Mã phiếu: PN0001" 
                                       FontSize="14"
                                       Foreground="#999999"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <!-- Print Button -->
                        <Button Click="BtnPrint_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Border Background="White"
                                    CornerRadius="10"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Padding="15,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🖨️"
                                               FontSize="16"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="In phiếu"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>


                        <!-- Delete Button -->
                        <Button Click="BtnDelete_Click"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 Cursor="Hand">
                            <Border Background="#FFEBEE"
                                    CornerRadius="10"
                                    Padding="15,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️"
                                               FontSize="16"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Xóa phiếu"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#F44336"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Import Bill Summary Cards -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Card -->
                    <Border Grid.Column="0"
                            Background="#E8F5E9"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Trạng thái" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtStatus"
                                       Text="Đã nhập kho" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Supplier Card -->
                    <Border Grid.Column="1"
                            Background="#F3E5F5"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Nhà cung cấp" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtSupplier"
                                       Text="NXB Trẻ" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"/>
                        </StackPanel>
                    </Border>

                    <!-- Warehouse Card -->
                    <Border Grid.Column="2"
                            Background="#E3F2FD"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Kho nhập" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtWarehouse"
                                       Text="Kho Trung Tâm" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Amount Card -->
                    <Border Grid.Column="3"
                            Background="#FFF3E0"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Tổng tiền" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalAmount"
                                       Text="15.500.000 ₫" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Import Details -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="20" 
                                    ShadowDepth="5" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock Grid.Row="0"
                               Text="📦 Chi tiết sách nhập"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Import Details DataGrid -->
                    <Border Grid.Row="1"
                            Style="{StaticResource DataGridContainerBorder}">
                        <DataGrid x:Name="dgImportDetails"
                                  Style="{StaticResource MainDataGrid}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <!-- STT -->
                                <DataGridTextColumn Header="STT" 
                                                    Width="60"
                                                    Binding="{Binding Index}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Book ID -->
                                <DataGridTextColumn Header="Mã sách" 
                                                    Width="100"
                                                    Binding="{Binding BookId}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Book Name -->
                                <DataGridTextColumn Header="Tên sách" 
                                                    Width="*"
                                                    Binding="{Binding BookName}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Quantity -->
                                <DataGridTextColumn Header="Số lượng" 
                                                    Width="100"
                                                    Binding="{Binding Quantity, StringFormat=N0}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Import Price -->
                                <DataGridTextColumn Header="Đơn giá" 
                                                    Width="120"
                                                    Binding="{Binding ImportPrice, StringFormat={}{0:N0} ₫}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Subtotal -->
                                <DataGridTextColumn Header="Thành tiền" 
                                                    Width="140"
                                                    Binding="{Binding Subtotal, StringFormat={}{0:N0} ₫}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Summary Section -->
                    <Border Grid.Row="2"
                            Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="📊 Tổng kết phiếu nhập"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtSummary"
                                           Text="Tổng số mặt hàng: 5 | Tổng số lượng: 150 cuốn"
                                           FontSize="12"
                                           Foreground="#666666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <TextBlock Text="TỔNG TIỀN:"
                                           FontSize="14"
                                           Foreground="#666666"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtGrandTotal"
                                           Text="15.500.000 ₫"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#FF9800"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Section - Import Info -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="20" 
                                    ShadowDepth="5" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Section Title -->
                        <TextBlock Text="ℹ️ Thông tin phiếu nhập"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,20"/>

                        <!-- Import Bill Info -->
                        <StackPanel>
                            <!-- Import ID -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Mã phiếu nhập"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoImportId"
                                               Text="PN0001"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Supplier Info -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Nhà cung cấp"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoSupplier"
                                               Text="NXB Trẻ"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtSupplierPhone"
                                               Text="📞 0123-456-789"
                                               FontSize="12"
                                               Foreground="#666666"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Warehouse Info -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Kho nhập"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoWarehouse"
                                               Text="Kho Trung Tâm"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtWarehouseAddress"
                                               Text="📍 123 Nguyễn Văn A, Q.1"
                                               FontSize="12"
                                               Foreground="#666666"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Created By -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Người lập phiếu"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCreatedBy"
                                               Text="Nguyễn Văn A"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Created Date -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Ngày nhập"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCreatedDate"
                                               Text="15/01/2025 - 10:30 AM"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Notes -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="📝 Ghi chú"
                                               FontSize="11"
                                               Foreground="#F57C00"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtNotes"
                                               Text="Hàng nhập đợt 1 tháng 1/2025. Kiểm tra kỹ chất lượng trước khi nhập kho."
                                               FontSize="12"
                                               Foreground="#666666"
                                               TextWrapping="Wrap"
                                               LineHeight="18"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>