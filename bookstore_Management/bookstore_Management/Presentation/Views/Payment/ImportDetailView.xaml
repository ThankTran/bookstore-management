<UserControl x:Class="bookstore_Management.Presentation.Views.Payment.ImportDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,10,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Return Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Return Button -->
                    <Border Grid.Column="0"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8"
                            Cursor="Hand"
                            Margin="0,0,15,0">
                        <Button x:Name="btnReturn"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Actions/return.png" 
                                       Width="18" 
                                       Height="18"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quay lại" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Page Title -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="CHI TIẾT PHIẾU NHẬP"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <Border Background="#E8F5E9"
                                CornerRadius="8"
                                Padding="10,5"
                                Margin="15,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" 
                                           FontSize="16"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Nhập"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#2E7D32"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Import Info Card -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="30"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="15" 
                                        ShadowDepth="3" 
                                        Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="8"
                                        Padding="10,5"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="18"/>
                                </Border>
                                <TextBlock Text="Thông tin phiếu nhập"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Print Button -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="8"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand">
                                <Button x:Name="btnPrint"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🖨" 
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="In phiếu nhập"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F57C00"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- Info Grid -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0">
                                <!-- Mã phiếu nhập -->
                                <Border Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="10"
                                        Padding="20,15"
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Mã phiếu nhập" 
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock x:Name="txtImportId"
                                                   Text="PN001"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Nhà cung cấp -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Nhà cung cấp" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🏢" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtSupplierName"
                                                       Text="NXB Kim Đồng"
                                                       FontSize="15"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Kho hàng -->
                                <StackPanel>
                                    <TextBlock Text="Nhập vào kho" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#E3F2FD"
                                            BorderBrush="#2196F3"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📦" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtWarehouseName"
                                                       Text="Kho Trung Tâm"
                                                       FontSize="15"
                                                       Foreground="#1976D2"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <!-- Ngày nhập -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Ngày nhập" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#FFF3E0"
                                            BorderBrush="#FF9800"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📅" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtCreatedDate"
                                                       Text="01/01/2024 10:30"
                                                       FontSize="15"
                                                       Foreground="#F57C00"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Người tạo phiếu -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Người tạo phiếu" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#E8F5E9"
                                            BorderBrush="#4CAF50"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👨‍💼" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtCreatedBy"
                                                       Text="Trần Thị B"
                                                       FontSize="15"
                                                       Foreground="#2E7D32"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Ghi chú -->
                                <StackPanel>
                                    <TextBlock Text="Ghi chú" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12"
                                            MinHeight="60">
                                        <TextBlock x:Name="txtNotes"
                                                   Text="Không có ghi chú"
                                                   FontSize="13"
                                                   Foreground="#999999"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Import Details Card -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="0"
                        MinHeight="500">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="15" 
                                        ShadowDepth="3" 
                                        Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Details Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource SecondaryLightBrush}"
                                CornerRadius="15,15,0,0"
                                Padding="25,15">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="White"
                                        CornerRadius="8"
                                        Padding="8,5"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📚" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Chi tiết sách nhập"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid with ScrollViewer -->
                        <Border Grid.Row="1" Padding="0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="600">
                                <DataGrid x:Name="dgImportDetails"
                                          Style="{StaticResource HistoryDataGrid}"
                                          Margin="0"
                                          VerticalScrollBarVisibility="Disabled"
                                          MinHeight="300">

                                    <DataGrid.Columns>
                                        <!-- STT -->
                                        <DataGridTextColumn Header="STT" 
                                                           Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Mã sách -->
                                        <DataGridTextColumn Header="Mã sách" 
                                                           Binding="{Binding BookId}"
                                                           Width="110">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Tên sách -->
                                        <DataGridTextColumn Header="Tên sách" 
                                                           Binding="{Binding Book.Name}"
                                                           Width="*"
                                                           MinWidth="200">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Left"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="10,0"/>
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Giá nhập -->
                                        <DataGridTextColumn Header="Giá nhập" 
                                                           Binding="{Binding ImportPrice, StringFormat={}{0:N0} ₫}"
                                                           Width="130">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Số lượng -->
                                        <DataGridTextColumn Header="Số lượng" 
                                                           Binding="{Binding Quantity}"
                                                           Width="100">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Thành tiền -->
                                        <DataGridTextColumn Header="Thành tiền" 
                                                           Width="150">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </Border>

                        <!-- Summary Footer -->
                        <Border Grid.Row="2"
                                Background="#FAFAFA"
                                CornerRadius="0,0,15,15"
                                Padding="30,20"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="400"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Info -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock FontSize="12" Foreground="#999999" Margin="0,0,0,5">
                                        <Run Text="Tổng số đầu sách: "/>
                                        <Run x:Name="txtTotalItems" 
                                             Text="0" 
                                             FontWeight="Bold"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Foreground="#999999">
                                        <Run Text="Tổng số lượng nhập: "/>
                                        <Run x:Name="txtTotalQuantity" 
                                             Text="0" 
                                             FontWeight="Bold"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Right Summary -->
                                <StackPanel Grid.Column="1">
                                    <!-- TỔNG GIÁ TRỊ NHẬP -->
                                    <Grid>
                                        <TextBlock Text="TỔNG GIÁ TRỊ NHẬP:"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock x:Name="txtTotalAmount"
                                                   Text="0 ₫"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   Foreground="#4CAF50"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>