<UserControl x:Class="bookstore_Management.Presentation.Views.Payment.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:bookstore_Management.Presentation.Converters"
             Background="{StaticResource BackgroundBrush}">
    <UserControl.Resources>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="214*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Product Grid -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="15,0,0,15"
                Margin="20,20,350,10" Grid.ColumnSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Border Grid.Row="0" 
                        Margin="20,15,20,15"
                        Background="{StaticResource SecondaryLightBrush}"
                        CornerRadius="10"
                        Height="30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                               Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                               Margin="10,6,27,6" RenderTransformOrigin="0.435,1.49"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#999"
                                 FontSize="13"
                                 FontFamily="{StaticResource PrimaryFont}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="TÃ¬m kiáº¿m máº·t hÃ ng - F1" 
                                                                       Foreground="#999" 
                                                                       FontSize="13"
                                                                       Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Product Grid -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,0,20,15">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="150" Height="120"
                                        Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="10"
                                        Margin="0,0,10,10"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Price Tag -->
                                        <Border Grid.Row="0"
                                                Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="10,10,0,0"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0}}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                        </Border>

                                        <!-- Product Name -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="5"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Order Info Bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource SecondaryLightBrush}"
                        Padding="20,15"
                        CornerRadius="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Tá»± Ä‘á»™ng táº¡o mÃ£ (ÄÆ¡n hÃ ng)"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            <Button Content="ðŸ“ Ghi chÃº"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Command="{Binding AddNoteCommand}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding OrderDateTime, StringFormat='dd/MM/yyyy HH:mm'}"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                Background="White"
                CornerRadius="0,15,15,0"
                Margin="0,20,20,10">

            <Grid RenderTransformOrigin="0.494,0.551">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Customer + Payment -->
                    <RowDefinition Height="*"/>
                    <!-- CartItems (scroll) -->
                    <RowDefinition Height="Auto"/>
                    <!-- Summary + Actions -->
                </Grid.RowDefinitions>


                <!-- Row 0: Customer + Payment -->
                <StackPanel Grid.Row="0" Margin="15,15,15,10">

                    <!-- Customer -->
                    <Border Background="{StaticResource SecondaryLightBrush}"
                            CornerRadius="8"
                            Height="30"
                            Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                            
                            <ComboBox x:Name="cbCustomer"
                                      Grid.Column="0"
                                      ItemsSource="{Binding Customers}"
                                      SelectedItem="{Binding SelectedCustomer}"
                                      DisplayMemberPath="Display"
                                      IsEditable="True"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      FontSize="12"
                                      Padding="12,0,0,0"
                                      VerticalContentAlignment="Center" Width="100">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Padding" Value="10,8"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <ComboBox x:Name="cbStaff"
                                      Grid.Column="1"
                                      ItemsSource="{Binding Staffs}"
                                      SelectedItem="{Binding SelectedStaff}"
                                      DisplayMemberPath="Display"
                                      IsEditable="True"
                                      BorderThickness="0"
                                      Background="Gray"
                                      FontSize="12"
                                      Width="200"
                                      Padding="12,0,0,0"
                                      VerticalContentAlignment="Center" >
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Padding" Value="10,8"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            </StackPanel>

                            <!--<Border Grid.Column="1"
                                    Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="6"
                                    Padding="10,4"
                                    Margin="8,3,8,3"
                                    Cursor="Hand">
                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Command="{Binding AddCustomerCommand}"
                                        ToolTip="ThÃªm khÃ¡ch hÃ ng má»›i">
                                    <TextBlock Text="+ Má»›i"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                </Button>
                            </Border>-->
                        </Grid>
                    </Border>

                    <!-- Spacing -->
                    <Border Height="10" Background="Transparent"/>

                    <!-- Payment Method -->
                    <Border Background="{StaticResource SecondaryLightBrush}"
                    CornerRadius="8"
                    Height="25">
                        <ComboBox x:Name="cbPaymentMethod"
                          ItemsSource="{Binding PaymentMethods}"
                          SelectedItem="{Binding SelectedPaymentMethod}"
                          DisplayMemberPath="Display"
                          BorderThickness="0"
                          Background="Transparent"
                          FontSize="12"
                          Padding="12,0,0,0"
                          VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <!-- Row 1: Cart Items (Scroll only here) -->
                <Border Grid.Row="1"
                Margin="15,0,15,10"
                Background="Transparent">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Empty Cart Message -->
                            <StackPanel Visibility="{Binding CartItems.Count,
                                 Converter={StaticResource CountToVisibilityConverter}}">
                                <TextBlock Text="ChÆ°a cÃ³ máº·t hÃ ng nÃ o trong danh sÃ¡ch"
                                   Foreground="#999"
                                   FontSize="12"
                                   FontStyle="Italic"
                                   TextAlignment="Center"
                                   Margin="0,40,0,0"
                                   TextWrapping="Wrap"/>
                                <TextBlock Text="Báº¥m F1 tÃ¬m hÃ³a Ä‘Æ¡n vÃ  Enter Ä‘á»ƒ chá»n. Enter thÃªm láº§n ná»¯a Ä‘á»ƒ chuyá»ƒn nhanh xuá»‘ng Ã´ nháº­p sá»‘ lÆ°á»£ng."
                                   Foreground="#CCC"
                                   FontSize="10"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="20,10,20,0"/>
                            </StackPanel>

                            <!-- Cart Items List -->
                            <ItemsControl ItemsSource="{Binding CartItems}"
                                            Visibility="{Binding CartItems.Count,
                                             Converter={StaticResource CountToVisibilityConverter},
                                             ConverterParameter=Inverse}">               
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="8"
                                        Padding="10"
                                        Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ProductName}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"
                                                       Foreground="{StaticResource PrimaryBrush}"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0}}"
                                                           FontSize="11"
                                                           Foreground="#666"/>
                                                        <TextBlock Text=" x " FontSize="11" Foreground="#666"/>
                                                        <TextBlock Text="{Binding Quantity}"
                                                           FontSize="11"
                                                           Foreground="#666"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Total, StringFormat={}{0:N0}}"
                                                       FontWeight="Bold"
                                                       FontSize="13"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       HorizontalAlignment="Right"/>
                                                    <Button Content="ðŸ—‘ï¸"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="12"
                                                    Cursor="Hand"
                                                    Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Bottom breathing space so last item isn't stuck to summary -->
                            <Border Height="6" Background="Transparent"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Row 2: Summary + Actions (fixed bottom) -->
                <Border Grid.Row="2"
                        Background="Transparent"
                        Margin="15,15,15,50">
                    <StackPanel>

                        <!-- Summary Items -->
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="HoÃ n thÃ nh" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="{Binding CompletedCount}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Tá»•ng thÃ nh tiá»n (tiá»n hÃ ng)" FontSize="12" Foreground="#666"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="âœï¸"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="10"
                                    Padding="5,0"
                                    Cursor="Hand"
                                    Command="{Binding EditSubtotalCommand}"
                                    Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Subtotal, StringFormat={}{0:N0}}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Äiá»ƒm thÆ°á»Ÿng" FontSize="12" Foreground="#666"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="âœï¸"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="10"
                                    Padding="5,0"
                                    Cursor="Hand"
                                    Command="{Binding EditLoyaltyPointsCommand}"
                                    Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding LoyaltyPoints, StringFormat={}{0:N0}}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,5">
                                <TextBlock Text="Chiáº¿t kháº¥u" FontSize="12" Foreground="#666"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="âœï¸"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontSize="10"
                                            Padding="10,0"
                                            Cursor="Hand"
                                            Command="{Binding EditDiscountCommand}"
                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Discount, StringFormat={}{0:N0}}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="%"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                        Foreground="{StaticResource PrimaryBrush}"/>        
                                </StackPanel>
                            </Grid>

                            <Separator Background="#E0E0E0" Margin="0,8"/>

                            <Grid Margin="0,8,0,0">
                                <TextBlock Text="Tá»•ng cá»™ng"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0}}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#FF5252"
                                   HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                            Background="#FFA726"
                            CornerRadius="8">
                                <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding SaveDraftCommand}"
                                Height="42"
                                Width="52">
                                    <TextBlock Text="ðŸ“‹"
                                       FontSize="22"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Button>
                            </Border>

                            <Border Grid.Column="2"
                                    CornerRadius="8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasItemsInCart}" Value="True">
                                                <Setter Property="Background" Value="#FF5252"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        Height="42"
                                        Cursor="Hand"
                                        Command="{Binding CheckoutCommand}"
                                        IsEnabled="{Binding HasItemsInCart}">   
                                    <TextBlock Text="Thanh toÃ¡n"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                </Button>
                            </Border>

                        </Grid>

                    </StackPanel>
                </Border>

            </Grid>
        </Border>

    </Grid>
</UserControl>