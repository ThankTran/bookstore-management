<UserControl x:Class="bookstore_Management.Views.Orders.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Product Grid -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="15,0,0,15"
                Margin="20,20,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Border Grid.Row="0" 
                        Margin="20,15,20,15"
                        Background="{StaticResource SecondaryLightBrush}"
                        CornerRadius="10"
                        Height="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                               Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                               Width="20" Height="20"
                               Margin="15,0,10,0"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#999"
                                 FontSize="13"
                                 FontFamily="{StaticResource PrimaryFont}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Tìm kiếm mặt hàng - F1" 
                                                                       Foreground="#999" 
                                                                       FontSize="13"
                                                                       Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Product Grid -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,0,20,15">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="150" Height="120"
                                        Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="10"
                                        Margin="0,0,10,10"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Price Tag -->
                                        <Border Grid.Row="0"
                                                Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="10,10,0,0"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0}}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                        </Border>

                                        <!-- Product Name -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="5"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Order Info Bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource SecondaryLightBrush}"
                        Padding="20,15"
                        CornerRadius="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Tự động tạo mã (Đơn hàng)"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            <Button Content="📝 Ghi chú"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    FontSize="12"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding OrderDateTime, StringFormat='dd/MM/yyyy HH:mm'}"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Right Side: Checkout Panel -->
        <Border Grid.Column="1" 
                Background="White"
                CornerRadius="0,15,15,0"
                Margin="0,20,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Customer -->
                <Border Grid.Row="0" 
                        Margin="15,15,15,10"
                        Background="{StaticResource SecondaryLightBrush}"
                        CornerRadius="8"
                        Height="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                               Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                               Width="18" Height="18"
                               Margin="12,0,8,0"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#999"
                                 FontSize="12"
                                 FontFamily="{StaticResource PrimaryFont}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Tìm khách hàng" 
                                                                       Foreground="#999" 
                                                                       FontSize="12"
                                                                       Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Cart Items -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="15,0,15,10">
                    <StackPanel>
                        <!-- Empty Cart Message -->
                        <StackPanel Visibility="{Binding CartItems.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Chưa có mặt hàng nào trong danh sách"
                                       Foreground="#999"
                                       FontSize="12"
                                       FontStyle="Italic"
                                       TextAlignment="Center"
                                       Margin="0,50,0,0"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Sao bấn F1 tìm thuộc đơn và [Enter] để chọn, bạn có thể di chuyển nhanh xuống sổ bị nhập số lượng bằng cách [Enter] thêm một lần nữa."
                                       Foreground="#CCC"
                                       FontSize="10"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="20,10,20,0"/>
                        </StackPanel>

                        <!-- Cart Items List -->
                        <ItemsControl ItemsSource="{Binding CartItems}"
                                      Visibility="{Binding CartItems.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SecondaryLightBrush}"
                                            CornerRadius="8"
                                            Padding="10"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           Foreground="{StaticResource PrimaryBrush}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0}}"
                                                               FontSize="11"
                                                               Foreground="#666"/>
                                                    <TextBlock Text=" x " FontSize="11" Foreground="#666"/>
                                                    <TextBlock Text="{Binding Quantity}"
                                                               FontSize="11"
                                                               Foreground="#666"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0}}"
                                                           FontWeight="Bold"
                                                           FontSize="13"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                                <Button Content="🗑️"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Cursor="Hand"
                                                        Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        HorizontalAlignment="Right"
                                                        Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Checkout Summary -->
                <StackPanel Grid.Row="2" Margin="15,0,15,15">

                    <!-- Summary Items -->
                    <StackPanel Margin="0,0,0,15">

                        <!-- Completed -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Hoàn thành"
                                       FontSize="12"
                                       Foreground="#666"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CompletedCount}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Subtotal -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Tổng thành tiền (tiền hàng)"
                                       FontSize="12"
                                       Foreground="#666"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                <Button Content="✏️" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="10"
                                        Padding="5,0"
                                        Cursor="Hand"
                                        Command="{Binding EditSubtotalCommand}"
                                        Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat={}{0:N0}}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Loyalty Points -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Điểm thưởng"
                                       FontSize="12"
                                       Foreground="#666"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                <Button Content="✏️" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="10"
                                        Padding="5,0"
                                        Cursor="Hand"
                                        Command="{Binding EditLoyaltyPointsCommand}"
                                        Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding LoyaltyPoints, StringFormat={}{0:N0}}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Discount -->
                        <Grid Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                                       Width="14" Height="14"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="Chiết khấu"
                                           FontSize="12"
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                <Button Content="✏️" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="10"
                                        Padding="5,0"
                                        Cursor="Hand"
                                        Command="{Binding EditDiscountCommand}"
                                        Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Discount, StringFormat={}{0:N0}}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <Separator Background="#E0E0E0" Margin="0,8"/>

                        <!-- Total -->
                        <Grid Margin="0,8,0,0">
                            <TextBlock Text="Tổng cộng"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                <Border Background="#FF5252"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Cursor="Hand"
                                        Margin="0,0,8,0">
                                    <TextBlock Text="+"
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#FF5252"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Save Draft Button -->
                        <Border Grid.Column="0"
                                Background="#FFA726"
                                CornerRadius="8"
                                Height="50">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding SaveDraftCommand}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <TextBlock Text="📋"
                                           FontSize="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Border>

                        <!-- Checkout Button -->
                        <Border Grid.Column="2"
                                Background="#FF5252"
                                CornerRadius="8"
                                Height="50">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding CheckoutCommand}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <TextBlock Text="Thanh toán"
                                           Foreground="White"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>