<UserControl x:Class="bookstore_Management.Views.Orders.OrderDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,10,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Return Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Return Button -->
                    <Border Grid.Column="0"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8"
                            Cursor="Hand"
                            Margin="0,0,15,0">
                        <Button x:Name="btnReturn"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Actions/return.png" 
                                       Width="18" 
                                       Height="18"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Quay lại" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Page Title -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="CHI TIẾT HÓA ĐƠN BÁN HÀNG"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        <Border Background="#E3F2FD"
                                CornerRadius="8"
                                Padding="10,5"
                                Margin="15,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" 
                                           FontSize="16"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Xuất"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Order Info Card -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="30"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="15" 
                                        ShadowDepth="3" 
                                        Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="8"
                                        Padding="10,5"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="18"/>
                                </Border>
                                <TextBlock Text="Thông tin hóa đơn"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Print Button -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="8"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand">
                                <Button x:Name="btnPrint"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🖨" 
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="In hóa đơn"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F57C00"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- Info Grid -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0">
                                <!-- Mã hóa đơn -->
                                <Border Background="{StaticResource SecondaryLightBrush}"
                                        CornerRadius="10"
                                        Padding="20,15"
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Mã hóa đơn" 
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock x:Name="txtOrderId"
                                                   Text="HD001"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Khách hàng -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Khách hàng" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👤" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtCustomerName"
                                                       Text="Nguyễn Văn A"
                                                       FontSize="15"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Nhân viên -->
                                <StackPanel>
                                    <TextBlock Text="Nhân viên bán hàng" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#E8F5E9"
                                            BorderBrush="#4CAF50"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👨‍💼" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtStaffName"
                                                       Text="Trần Thị B"
                                                       FontSize="15"
                                                       Foreground="#2E7D32"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <!-- Ngày tạo -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Ngày tạo" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#FFF3E0"
                                            BorderBrush="#FF9800"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📅" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtCreatedDate"
                                                       Text="01/01/2024 10:30"
                                                       FontSize="15"
                                                       Foreground="#F57C00"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Phương thức thanh toán -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Phương thức thanh toán" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="#E3F2FD"
                                            BorderBrush="#2196F3"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="💳" 
                                                       FontSize="16"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock x:Name="txtPaymentMethod"
                                                       Text="Tiền mặt"
                                                       FontSize="15"
                                                       Foreground="#1976D2"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Ghi chú -->
                                <StackPanel>
                                    <TextBlock Text="Ghi chú" 
                                               FontSize="13"
                                               Foreground="#666666"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="15,12"
                                            MinHeight="60">
                                        <TextBlock x:Name="txtNotes"
                                                   Text="Không có ghi chú"
                                                   FontSize="13"
                                                   Foreground="#999999"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Order Details Card -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="0"
                        MinHeight="500">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="15" 
                                        ShadowDepth="3" 
                                        Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Details Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource SecondaryLightBrush}"
                                CornerRadius="15,15,0,0"
                                Padding="25,15">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="White"
                                        CornerRadius="8"
                                        Padding="8,5"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📦" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Chi tiết sản phẩm"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid with ScrollViewer -->
                        <Border Grid.Row="1" Padding="0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="600">
                                <DataGrid x:Name="dgOrderDetails"
                                          Style="{StaticResource HistoryDataGrid}"
                                          Margin="0"
                                          VerticalScrollBarVisibility="Disabled"
                                          MinHeight="300">

                                    <DataGrid.Columns>
                                        <!-- STT -->
                                        <DataGridTextColumn Header="STT" 
                                                           Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Mã sách -->
                                        <DataGridTextColumn Header="Mã sách" 
                                                           Binding="{Binding BookId}"
                                                           Width="110">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Tên sách -->
                                        <DataGridTextColumn Header="Tên sách" 
                                                           Binding="{Binding Book.Name}"
                                                           Width="*"
                                                           MinWidth="200">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Left"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="10,0"/>
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Đơn giá -->
                                        <DataGridTextColumn Header="Đơn giá" 
                                                           Binding="{Binding SalePrice, StringFormat={}{0:N0} ₫}"
                                                           Width="130">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Số lượng -->
                                        <DataGridTextColumn Header="Số lượng" 
                                                           Binding="{Binding Quantity}"
                                                           Width="100">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Thành tiền -->
                                        <DataGridTextColumn Header="Thành tiền" 
                                                           Binding="{Binding Subtotal, StringFormat={}{0:N0} ₫}"
                                                           Width="150">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </Border>

                        <!-- Summary Footer -->
                        <Border Grid.Row="2"
                                Background="#FAFAFA"
                                CornerRadius="0,0,15,15"
                                Padding="30,20"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="400"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Info -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock FontSize="12" Foreground="#999999" Margin="0,0,0,5">
                                        <Run Text="Tổng số mặt hàng: "/>
                                        <Run x:Name="txtTotalItems" 
                                             Text="0" 
                                             FontWeight="Bold"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Foreground="#999999">
                                        <Run Text="Tổng số lượng: "/>
                                        <Run x:Name="txtTotalQuantity" 
                                             Text="0" 
                                             FontWeight="Bold"
                                             Foreground="{StaticResource PrimaryBrush}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Right Summary -->
                                <StackPanel Grid.Column="1">
                                    <!-- Tạm tính -->
                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Tạm tính:"
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                        <TextBlock x:Name="txtSubtotal"
                                                   Text="0 ₫"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Giảm giá -->
                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Giảm giá:"
                                                   FontSize="14"
                                                   Foreground="#666666"/>
                                        <TextBlock x:Name="txtDiscount"
                                                   Text="0 ₫"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4CAF50"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Separator Background="#E0E0E0" Margin="0,5,0,10"/>

                                    <!-- Tổng cộng -->
                                    <Grid>
                                        <TextBlock Text="TỔNG CỘNG:"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock x:Name="txtTotalPrice"
                                                   Text="0 ₫"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   Foreground="#FF6B6B"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>