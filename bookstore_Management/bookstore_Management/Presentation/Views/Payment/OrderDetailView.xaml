<UserControl x:Class="bookstore_Management.Presentation.Views.Payment.OrderDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="15"
                Padding="30"
                Margin="20,20,20,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                BlurRadius="20" 
                                ShadowDepth="5" 
                                Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Back Button -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <!-- Back Button -->
                        <Border Background="{StaticResource PrimaryBrush}"
                                CornerRadius="10"
                                Width="40" Height="40"
                                Margin="0,0,15,0"
                                Cursor="Hand">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <TextBlock Text="←" 
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chi tiết Đơn Hàng" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock x:Name="txtOrderId"
                                       Text="Mã đơn: HD0001" 
                                       FontSize="14"
                                       Foreground="#999999"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <!-- Print Invoice Button -->
                        <Border Background="White"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="15,8"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🖨️" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="In hóa đơn"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Cancel Order Button -->
                        <Border Background="#FFEBEE"
                                CornerRadius="10"
                                Padding="15,8"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❌" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Hủy đơn"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#F44336"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Order Summary Cards -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Customer Card -->
                    <Border Grid.Column="0"
                            Background="#E3F2FD"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Khách hàng" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtCustomer"
                                       Text="Nguyễn Văn A" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <!-- Payment Method Card -->
                    <Border Grid.Column="1"
                            Background="#F3E5F5"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Thanh toán" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtPaymentMethod"
                                       Text="Tiền mặt" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#9C27B0"/>
                        </StackPanel>
                    </Border>

                    <!-- Status Card -->
                    <Border Grid.Column="2"
                            Background="#E8F5E9"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Trạng thái" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtStatus"
                                       Text="Hoàn thành" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Amount Card -->
                    <Border Grid.Column="3"
                            Background="#FFF3E0"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Tổng tiền" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalAmount"
                                       Text="2.450.000 ₫" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Order Details -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="20" 
                                    ShadowDepth="5" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock Grid.Row="0"
                               Text="📚 Chi tiết sản phẩm"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Order Details DataGrid -->
                    <Border Grid.Row="1"
                            Style="{StaticResource DataGridContainerBorder}">
                        <DataGrid x:Name="dgOrderDetails"
                                  Style="{StaticResource MainDataGrid}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <!-- STT -->
                                <DataGridTextColumn Header="STT" 
                                                    Width="60"
                                                    Binding="{Binding Index}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Book ID -->
                                <DataGridTextColumn Header="Mã sách" 
                                                    Width="100"
                                                    Binding="{Binding BookId}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Book Name -->
                                <DataGridTextColumn Header="Tên sách" 
                                                    Width="*"
                                                    Binding="{Binding BookName}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Quantity -->
                                <DataGridTextColumn Header="Số lượng" 
                                                    Width="100"
                                                    Binding="{Binding Quantity, StringFormat=N0}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Sale Price -->
                                <DataGridTextColumn Header="Đơn giá" 
                                                    Width="120"
                                                    Binding="{Binding SalePrice, StringFormat={}{0:N0} ₫}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}"/>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Subtotal -->
                                <DataGridTextColumn Header="Thành tiền" 
                                                    Width="140"
                                                    Binding="{Binding Subtotal, StringFormat={}{0:N0} ₫}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Payment Summary Section -->
                    <Border Grid.Row="2"
                            Background="#F8F9FA"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Subtotal -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Tổng tiền hàng:"
                                       FontSize="14"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       x:Name="txtSubtotal"
                                       Text="2.500.000 ₫"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,8"/>

                            <!-- Discount -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Giảm giá:"
                                       FontSize="14"
                                       Foreground="#666666"
                                       Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       x:Name="txtDiscount"
                                       Text="- 50.000 ₫"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#F44336"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,8"/>

                            <!-- Divider -->
                            <Border Grid.Row="2" Grid.ColumnSpan="2"
                                    Height="1"
                                    Background="#E0E0E0"
                                    Margin="0,8,0,12"/>

                            <!-- Grand Total -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="TỔNG THANH TOÁN:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       x:Name="txtGrandTotal"
                                       Text="2.450.000 ₫"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#FF9800"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Section - Order Info -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="20" 
                                    ShadowDepth="5" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Section Title -->
                        <TextBlock Text="ℹ️ Thông tin đơn hàng"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Margin="0,0,0,20"/>

                        <!-- Order Info -->
                        <StackPanel>
                            <!-- Order ID -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Mã đơn hàng"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoOrderId"
                                               Text="HD0001"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Customer Info -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Khách hàng"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoCustomer"
                                               Text="Nguyễn Văn A"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtCustomerPhone"
                                               Text="📞 0987-654-321"
                                               FontSize="12"
                                               Foreground="#666666"
                                               Margin="0,5,0,0"/>
                                    <TextBlock x:Name="txtMemberTier"
                                               Text="💎 Hạng: Vàng"
                                               FontSize="12"
                                               Foreground="#FFB74D"
                                               FontWeight="SemiBold"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Staff Info -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Nhân viên bán hàng"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtStaffName"
                                               Text="Trần Thị B"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Payment Method -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Phương thức thanh toán"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtInfoPaymentMethod"
                                               Text="💵 Tiền mặt"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Created Date -->
                            <Border Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Ngày tạo đơn"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCreatedDate"
                                               Text="15/01/2025 - 14:30 PM"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- Notes -->
                            <Border Background="#E3F2FD"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="📝 Ghi chú"
                                               FontSize="11"
                                               Foreground="#2196F3"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtNotes"
                                               Text="Khách hàng yêu cầu giao hàng trong 2 ngày."
                                               FontSize="12"
                                               Foreground="#666666"
                                               TextWrapping="Wrap"
                                               LineHeight="18"/>
                                </StackPanel>
                            </Border>

                            <!-- Summary Stats -->
                            <Border Background="#FFF3E0"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="📊 Thống kê"
                                               FontSize="11"
                                               Foreground="#F57C00"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Tổng sản phẩm:"
                                                   FontSize="12"
                                                   Foreground="#666666"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   x:Name="txtTotalItems"
                                                   Text="8 mặt hàng"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Right"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="Tổng số lượng:"
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   x:Name="txtTotalQuantity"
                                                   Text="15 cuốn"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,5,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>