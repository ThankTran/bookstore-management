<UserControl x:Class="bookstore_Management.Presentation.Views.Orders.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Add Button and Search -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add Button -->
                <Button x:Name="btnAdd"
                        Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        HorizontalAlignment="Left"
                        ToolTip="Tạo hóa đơn nhập mới">
                    <Image Source="/Presentation/AppResources/Images/Icons/Actions/add.png" 
                           Width="30" 
                           Height="30"/>
                </Button>

                <!-- Search Bar -->
                <Border Grid.Column="2" 
                        Style="{StaticResource SearchBorderContainer}"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                                 Grid.Column="0"
                                 Style="{StaticResource SearchTextBox}"
                                 Text="Tìm kiếm hóa đơn..."/>

                        <Button Grid.Column="1"
                                Style="{StaticResource SearchButton}">
                            <Image Source="/Presentation/AppResources/Images/Icons/Actions/search.png" 
                                   Width="15" 
                                   Height="15"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid -->
            <Border Grid.Row="1" 
                    Style="{StaticResource DataGridContainerBorder}">
                <DataGrid x:Name="dgBills"
                          Style="{StaticResource MainDataGrid}">
                    <!-- Custom ScrollBar Style -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                    </DataGrid.Resources>

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- STT -->
                        <DataGridTextColumn Header="STT" 
                                            Binding="{Binding STT}" 
                                            Width="60"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Mã hóa đơn (Id) -->
                        <DataGridTextColumn Header="Mã HĐ" 
                                            Binding="{Binding Id}" 
                                            Width="100"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource PrimaryColorCell}"/>

                        <!-- Nhà cung cấp (SupplierId) -->
                        <DataGridTextColumn Header="Nhà cung cấp" 
                                            Binding="{Binding SupplierName}" 
                                            Width="*"
                                            MinWidth="180"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Kho (WarehouseId) -->
                        <DataGridTextColumn Header="Kho" 
                                            Binding="{Binding WarehouseName}" 
                                            Width="120"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Tổng tiền (TotalAmount) -->
                        <DataGridTextColumn Header="Tổng tiền" 
                                            Binding="{Binding TotalAmount, StringFormat={}{0:N0} đ}" 
                                            Width="150"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource RightAlignedCell}"/>

                        <!-- Người tạo (CreatedBy) -->
                        <DataGridTextColumn Header="Người tạo" 
                                            Binding="{Binding CreatedByName}" 
                                            Width="140"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Ngày tạo (CreatedDate) -->
                        <DataGridTextColumn Header="Ngày tạo" 
                                            Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                            Width="150"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CenterAlignedCell}"/>

                        <!-- Trạng thái -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Xem chi tiết -->
                        <DataGridTemplateColumn Header="Chi tiết" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="Xem chi tiết">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/view.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Xóa -->
                        <DataGridTemplateColumn Header="Xóa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource SmallIconButton}"
                                            ToolTip="Xóa hóa đơn">
                                        <Image Source="/Presentation/AppResources/Images/Icons/Actions/recyclebin.png" 
                                               Width="20" 
                                               Height="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>