<UserControl x:Class="bookstore_Management.Presentation.Views.Orders.InvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="0,0,10,0"
            ClipToBounds="True">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <TextBlock Grid.Row="0"
                       Text="QUẢN LÝ HÓA ĐƠN"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,20"/>

            <!-- Filter Tabs Section -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tab Buttons -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                    <!-- Tab Tất cả -->
                    <Border x:Name="tabAll"
                            Background="{StaticResource PrimaryBrush}"
                            CornerRadius="8,8,0,0"
                            Padding="20,10"
                            Margin="0,0,5,0"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#585AB8" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding FilterAllCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Tất cả hóa đơn" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Tab Hóa đơn nhập -->
                    <Border x:Name="tabImport"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1,1,1,0"
                            CornerRadius="8,8,0,0"
                            Padding="20,10"
                            Margin="0,0,5,0"
                            Cursor="Hand">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding FilterImportCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Hóa đơn nhập" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Tab Hóa đơn xuất -->
                    <Border x:Name="tabExport"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1,1,1,0"
                            CornerRadius="8,8,0,0"
                            Padding="20,10"
                            Cursor="Hand">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding FilterExportCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Hóa đơn xuất" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>

                <!-- Stats Summary -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

                    <!-- Total Import -->
                    <Border Background="#E8F5E9"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Nhập: " 
                                       FontSize="12"
                                       Foreground="#2E7D32"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="tbImportCount"
                                       Text="{Binding TotalImportInvoices}"
                                       FontSize="13"
                                       Foreground="#2E7D32"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Export -->
                    <Border Background="#E3F2FD"
                            CornerRadius="8"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xuất: " 
                                       FontSize="12"
                                       Foreground="#1976D2"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="tbExportCount"
                                       Text="{Binding TotalExportInvoices}" 
                                       FontSize="13"
                                       Foreground="#1976D2"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Action Bar -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Actions Group -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                    <!-- Add Import Button -->
                    <Border Background="#4CAF50"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#4CAF50" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Button x:Name="btnAddImport"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="15,8"
                                Command="{Binding AddImportCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Tạo phiếu nhập" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Add Export Button -->
                    <Border Background="#2196F3"
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#2196F3" 
                                            BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <Button x:Name="btnAddExport"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="15,8"
                                Command="{Binding AddExportCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" 
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Tạo hóa đơn bán" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Divider -->
                    <Border Width="1" 
                            Background="#E0E0E0"
                            Margin="5,5,15,5"/>

                    <!-- Print Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button x:Name="btnPrint"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="In danh sách"
                                Command="{Binding PrintCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/print.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="In" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Export Button -->
                    <Border Background="White"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button x:Name="btnExport"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="12,8"
                                ToolTip="Xuất Excel"
                                Command="{Binding ExportCommand}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Presentation/AppResources/Images/Icons/Functions/export.png" 
                                       Width="20" 
                                       Height="20"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Xuất Excel" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>

                <!-- Search Bar - Right Aligned -->
                <Border Grid.Column="2"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="15,8"
                        Width="320"
                        HorizontalAlignment="Right">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Image Grid.Column="0"
                               Source="/Presentation/AppResources/Images/Icons/Actions/search.png"
                               Width="18" 
                               Height="18"
                               Margin="0,0,10,0"
                               Opacity="0.5"/>

                        <!-- Search TextBox -->
                        <TextBox x:Name="txtSearch"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 FontSize="13"
                                 Foreground="#666666"
                                 Text="{ Binding SearchKeywork, UpdateSourceTrigger=PropertyChanged}"       
                                 FontFamily="{StaticResource PrimaryFont}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Tìm kiếm theo mã hóa đơn, đối tác..." 
                                                                       Foreground="#999999" 
                                                                       FontSize="13"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Clear Button -->
                        <Button Grid.Column="2"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <TextBlock Text="✕" 
                                       Foreground="#999999"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Data Grid Section -->
            <Border Grid.Row="3"
                    Background="White"
                    CornerRadius="15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="3" 
                                    Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header Info -->
                    <Border Grid.Row="0"
                            Background="{StaticResource SecondaryLightBrush}"
                            CornerRadius="15,15,0,0"
                            Padding="20,12">
                        <Grid>
                            <TextBlock Text="Danh sách hóa đơn"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <TextBlock Text="Tổng số: "
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="tbTotalCount"
                                           Text="{Binding TotalInvoices}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                                <TextBlock Text=" hóa đơn"
                                           FontSize="13"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="3,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              x:Name="dgInvoices"
                              Style="{StaticResource MainDataGrid}"
                              ItemsSource="{Binding Invoices}"
                              SelectedItem="{Binding SelectedInvoice}"
                              LoadingRow="dgInvoices_LoadingRow"
                              AutoGenerateColumns="False"
                              MouseDoubleClick="DataGrid_MouseDoubleClick"
                              Margin="0">

                        <DataGrid.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource DataGridScrollBar}"/>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- STT -->
                            <DataGridTextColumn Header="STT" 
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"   
                                                Width="60"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedCell}">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Mã hóa đơn -->
                            <DataGridTextColumn Header="Mã hóa đơn" 
                                                Binding="{Binding InvoiceId}" 
                                                Width="130"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource PrimaryColorCell}">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Loại hóa đơn -->
                            <DataGridTemplateColumn Header="Loại" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" 
                                                Padding="12,6"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypeDisplay}" Value="Nhập">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TypeDisplay}" Value="Xuất">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="14" Margin="0,0,5,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeDisplay}" Value="Nhập">
                                                                    <Setter Property="Text" Value="📥"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeDisplay}" Value="Xuất">
                                                                    <Setter Property="Text" Value="📤"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding TypeDisplay}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeDisplay}" Value="Nhập">
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TypeDisplay}" Value="Xuất">
                                                                    <Setter Property="Foreground" Value="#1976D2"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Đối tác -->
                            <DataGridTextColumn Header="Đối tác" 
                                                Binding="{Binding Partner}" 
                                                Width="*"
                                                MinWidth="180"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Ngày tạo -->
                            <DataGridTemplateColumn Header="Ngày tạo" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0"
                                                CornerRadius="6"
                                                Padding="10,5"
                                                HorizontalAlignment="Center"
                                                Margin="5,0">
                                            <TextBlock Text="{Binding CreatedDateDisplay}"
                                                       FontSize="12"
                                                       Foreground="#F57C00"
                                                       FontWeight="Medium"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Tổng tiền -->
                            <DataGridTextColumn Header="Tổng tiền" 
                                                Binding="{Binding TotalAmountDisplay}" 
                                                Width="160"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCell}">
                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Người tạo -->
                            <DataGridTextColumn Header="Người tạo" 
                                                Binding="{Binding CreatedBy}" 
                                                Width="140"
                                                IsReadOnly="True"
                                                ElementStyle="{StaticResource CenterAlignedCell}"/>

                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Thao tác" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <!-- View Button --><!--
                                            <Border Background="#E3F2FD"
                                                    CornerRadius="6"
                                                    Margin="0,0,5,0"
                                                    Cursor="Hand"
                                                    ToolTip="Xem chi tiết">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="👁" 
                                                               FontSize="16"/>
                                                </Button>
                                            </Border>-->

                                            <!-- Edit Button -->
                                            <Border Background="#FFF3E0"
                                                    CornerRadius="6"
                                                    Margin="0,0,5,0"
                                                    Cursor="Hand"
                                                    ToolTip="Sửa hóa đơn">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Background="Transparent"
                                                        Width="32"
                                                        Height="32"
                                                        Command="{Binding DataContext.EditCommand,
                                                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"

                                                        Tag="{Binding}">
                                                    <TextBlock Text="✏️" 
                                                               FontSize="16"/>
                                                </Button>
                                            </Border>
                                            <!-- Delete Button -->
                                            <Border Background="#FFEBEE"
                                                    CornerRadius="6"
                                                    Cursor="Hand"
                                                    ToolTip="Xóa hóa đơn">
                                                <Button Style="{StaticResource SmallIconButton}"
                                                        Width="32"
                                                        Height="32"
                                                        Background="#FFEBEE"
                                                        Cursor="Hand"
                                                        ToolTip="Xóa hóa đơn"
                                                        
                                                        Command="{Binding DataContext.DeleteCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <TextBlock Text="🗑" FontSize="16"/>
                                                </Button>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Footer/Pagination Area -->
                    <Border Grid.Row="2"
                            Background="#FAFAFA"
                            CornerRadius="0,0,15,15"
                            Padding="20,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                <TextBlock Text="💡" 
                                           FontSize="14"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Nhấp đúp vào hóa đơn để xem chi tiết"
                                           FontSize="12"
                                           Foreground="#999999"
                                           FontStyle="Italic"/>
                            </StackPanel>

                            <TextBlock HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#666666">
                                <Run Text="Hiển thị"/>
                                <Run x:Name="tbDisplayCount"
                                     Text="0" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource PrimaryBrush}"/>
                                <Run Text="hóa đơn"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>