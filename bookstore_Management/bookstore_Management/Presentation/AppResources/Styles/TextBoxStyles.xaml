<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Flat TextBox Style (Dùng cho Dialog) -->
    <Style x:Key="FlatTextBox" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Bordered TextBox Container Style -->
    <Style x:Key="BorderedTextBoxContainer" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
    </Style>

    <!-- ReadOnly TextBox Container Style -->
    <Style x:Key="ReadOnlyTextBoxContainer" TargetType="Border" BasedOn="{StaticResource BorderedTextBoxContainer}">
        <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
    </Style>

    <!-- Search TextBox Style -->
    <Style x:Key="SearchTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <!-- Search Border Container Style -->
    <Style x:Key="SearchBorderContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    

</ResourceDictionary>