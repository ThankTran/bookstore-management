<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Brushes -->
    <SolidColorBrush x:Key="StatCardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DateFilterBackgroundBrush" Color="#AAAADA"/>
    <SolidColorBrush x:Key="CustomerIconBackgroundBrush" Color="#E9E9F5"/>
    <SolidColorBrush x:Key="CategoryIconBackgroundBrush" Color="#FFF4E6"/>
    <SolidColorBrush x:Key="RevenueIconBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="ProfitIconBackgroundBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="TotalCustomerBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="LegendTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="AxisTextBrush" Color="#999999"/>

    <!-- Chart Colors -->
    <SolidColorBrush x:Key="Chart1Brush" Color="#B8B3E6"/>
    <SolidColorBrush x:Key="Chart2Brush" Color="#9B95D4"/>
    <SolidColorBrush x:Key="Chart3Brush" Color="#8680C8"/>
    <SolidColorBrush x:Key="Chart4Brush" Color="#6B65BC"/>
    <SolidColorBrush x:Key="Chart5Brush" Color="#5650B0"/>
    <SolidColorBrush x:Key="PieChartMemberBrush" Color="#A8A3D9"/>
    <SolidColorBrush x:Key="PieChartRegularBrush" Color="#7B75C0"/>

    <!-- Shadow Effect -->
    <DropShadowEffect x:Key="CardShadowEffect" 
                      Color="#E0E0E0" 
                      BlurRadius="10" 
                      ShadowDepth="2" 
                      Opacity="0.3"/>

    <!-- Card Border Style -->
    <Style x:Key="StatCardBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource StatCardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
    </Style>

    <!-- Icon Container Style -->
    <Style x:Key="IconContainer" TargetType="Border">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Card Header Style -->
    <Style x:Key="CardHeaderText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Date Filter Border Style -->
    <Style x:Key="DateFilterBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DateFilterBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>

    <!-- Date Filter Text Style -->
    <Style x:Key="DateFilterText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <!-- Total Customer Card Style -->
    <Style x:Key="TotalCustomerCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource TotalCustomerBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Total Customer Number Style -->
    <Style x:Key="TotalCustomerNumber" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Legend Text Style -->
    <Style x:Key="LegendText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource LegendTextBrush}"/>
    </Style>

    <!-- Legend Small Text Style -->
    <Style x:Key="LegendSmallText" TargetType="TextBlock" BasedOn="{StaticResource LegendText}">
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Legend Percentage Style -->
    <Style x:Key="LegendPercentage" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <!-- Legend Dot Style -->
    <Style x:Key="LegendDot" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Small Legend Dot Style -->
    <Style x:Key="SmallLegendDot" TargetType="Ellipse">
        <Setter Property="Width" Value="10"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- Chart Container Style -->
    <Style x:Key="ChartContainer" TargetType="Grid">
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>

    <!-- Page Title Style -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Subtitle Text Style -->
    <Style x:Key="SubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource AxisTextBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>