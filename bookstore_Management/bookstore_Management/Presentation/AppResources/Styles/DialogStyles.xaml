<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font Resources -->
    <FontFamily x:Key="PrimaryFont">/Presentation/AppResources/Fonts/#Quicksand</FontFamily>

    <!-- Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#585AB8"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#7F81E5"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#E9E9F5"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#E9E9F4"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>

    <!-- Dialog Window Style -->
    <Style x:Key="DialogWindow" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>

    <!-- Dialog Border Style -->
    <Style x:Key="DialogBorder" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="25"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Dialog Title Style -->
    <Style x:Key="DialogTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Form Label Style -->
    <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Form Input Border Style -->
    <Style x:Key="FormInputBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <!-- Form ReadOnly Input Border Style -->
    <Style x:Key="FormReadOnlyInputBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <!-- FlatTextBox Style -->
    <Style x:Key="FlatTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Existing Primary Button Border Style -->
    <Style x:Key="PrimaryButtonBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Secondary Button Border Style -->
    <Style x:Key="SecondaryButtonBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource SecondaryLightBrush}"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Existing Primary Button Style -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Dialog Button Container -->
    <Style x:Key="DialogButtonContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>

    <!-- Dialog Form Container -->
    <Style x:Key="DialogFormContainer" TargetType="Grid">
        <Setter Property="Margin" Value="15,15,15,0"/>
    </Style>

    <!-- Additional Color Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#DE7E9E"/>

    <!-- Enhanced Dialog Window Style (with animation) -->
    <Style x:Key="EnhancedDialogWindow" TargetType="Window" BasedOn="{StaticResource DialogWindow}">
    </Style>

    <!-- Enhanced Dialog Border -->
    <Style x:Key="EnhancedDialogBorder" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="10" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced Dialog Title -->
    <Style x:Key="EnhancedDialogTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,25"/>
    </Style>

    <!-- Dialog Subtitle -->
    <Style x:Key="DialogSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,25"/>
    </Style>

    <!-- Enhanced Form Input Border (với hover effect) -->
    <Style x:Key="EnhancedFormInputBorder" TargetType="Border" BasedOn="{StaticResource FormInputBorder}">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Height" Value="38"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Enhanced TextBox -->
    <Style x:Key="EnhancedTextBox" TargetType="TextBox" BasedOn="{StaticResource FlatTextBox}">
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <!-- Form ComboBox Style -->
    <Style x:Key="FormComboBox" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Height" Value="38"/>
    </Style>

    <!-- Form PasswordBox Style -->
    <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Danger Button Border (cho nút xóa) -->
    <Style x:Key="DangerButtonBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D32F2F"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Success Button Border -->
    <Style x:Key="SuccessButtonBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#388E3C"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Icon Container for Dialogs -->
    <Style x:Key="DialogIconContainer" TargetType="Border">
        <Setter Property="Width" Value="70"/>
        <Setter Property="Height" Value="70"/>
        <Setter Property="CornerRadius" Value="35"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Icon Background Gradients -->
    <LinearGradientBrush x:Key="SuccessIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#66BB6A" Offset="0"/>
        <GradientStop Color="#4CAF50" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DangerIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#EF5350" Offset="0"/>
        <GradientStop Color="#F44336" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WarningIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFA726" Offset="0"/>
        <GradientStop Color="#FF9800" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InfoIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#42A5F5" Offset="0"/>
        <GradientStop Color="#2196F3" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="QuestionIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7F81E5" Offset="0"/>
        <GradientStop Color="#585AB8" Offset="1"/>
    </LinearGradientBrush>

    <!-- Icon Styles -->
    <Style x:Key="SuccessIconStyle" TargetType="Border" BasedOn="{StaticResource DialogIconContainer}">
        <Setter Property="Background" Value="{StaticResource SuccessIconGradient}"/>
    </Style>

    <Style x:Key="DangerIconStyle" TargetType="Border" BasedOn="{StaticResource DialogIconContainer}">
        <Setter Property="Background" Value="{StaticResource DangerIconGradient}"/>
    </Style>

    <Style x:Key="WarningIconStyle" TargetType="Border" BasedOn="{StaticResource DialogIconContainer}">
        <Setter Property="Background" Value="{StaticResource WarningIconGradient}"/>
    </Style>

    <Style x:Key="InfoIconStyle" TargetType="Border" BasedOn="{StaticResource DialogIconContainer}">
        <Setter Property="Background" Value="{StaticResource InfoIconGradient}"/>
    </Style>

    <Style x:Key="QuestionIconStyle" TargetType="Border" BasedOn="{StaticResource DialogIconContainer}">
        <Setter Property="Background" Value="{StaticResource QuestionIconGradient}"/>
    </Style>

    <!-- Dialog Close Button -->
    <Style x:Key="DialogCloseButton" TargetType="Button">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="#999999"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFEBEE"/>
                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Required Field Indicator -->
    <Style x:Key="RequiredIndicator" TargetType="TextBlock">
        <Setter Property="Text" Value="*"/>
        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="3,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Validation Error Text -->
    <Style x:Key="ValidationError" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>

    <!-- Help Text -->
    <Style x:Key="HelpText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#999999"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>

    <!-- Enhanced Button Container -->
    <Style x:Key="EnhancedButtonContainer" TargetType="StackPanel" BasedOn="{StaticResource DialogButtonContainer}">
        <Setter Property="Margin" Value="0,30,0,0"/>
    </Style>

</ResourceDictionary>