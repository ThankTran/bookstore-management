<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dialog Window Base Style -->
    <Style x:Key="DialogWindow" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
    </Style>

    <!-- Dialog Main Border Style -->
    <Style x:Key="DialogBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- Dialog Title Style -->
    <Style x:Key="DialogTitle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,15,0,0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
    </Style>

    <!-- Dialog Form Container Style -->
    <Style x:Key="DialogFormContainer" TargetType="Grid">
        <Setter Property="Margin" Value="40,20,40,0"/>
    </Style>

    <!-- Dialog Button Container Style -->
    <Style x:Key="DialogButtonContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,25,0,15"/>
    </Style>

    <!-- Form Label Style -->
    <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,20,0"/>
    </Style>

    <!-- Form Input Border Style -->
    <Style x:Key="FormInputBorder" TargetType="Border">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <!-- Form ReadOnly Input Border Style -->
    <Style x:Key="FormReadOnlyInputBorder" TargetType="Border" BasedOn="{StaticResource FormInputBorder}">
        <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
    </Style>

</ResourceDictionary>