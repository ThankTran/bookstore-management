<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#585ab8</Color>
    <Color x:Key="PrimaryLightColor">#7577C3</Color>
    <Color x:Key="PrimaryDarkColor">#4648A0</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#989AD4</Color>
    <Color x:Key="SecondaryLightColor">#E9E9F5</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#E9E9F4</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="LightGrayColor">#F0F0F0</Color>
    <Color x:Key="AlternateRowColor">#F8F8FF</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#585ab8</Color>
    <Color x:Key="BorderLightColor">#8E90CC</Color>
    <Color x:Key="BorderGrayColor">#E0E0E0</Color>

    <!-- Hover Colors -->
    <Color x:Key="HoverColor">#F0F0FF</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#585ab8</Color>
    <Color x:Key="TextWhiteColor">#FFFFFF</Color>
    <Color x:Key="TextBlackColor">#000000</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}"/>
    <SolidColorBrush x:Key="AlternateRowBrush" Color="{StaticResource AlternateRowColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderGrayBrush" Color="{StaticResource BorderGrayColor}"/>

    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="{StaticResource TextWhiteColor}"/>
    <SolidColorBrush x:Key="TextBlackBrush" Color="{StaticResource TextBlackColor}"/>

</ResourceDictionary>