<Window x:Class="BookstoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookstore Management"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

	<Border CornerRadius="20">
		<Border.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
				<GradientStop Color="#5B4B8A" Offset="0"/>
				<GradientStop Color="#6B7A94" Offset="0.5"/>
				<GradientStop Color="#7BA8B8" Offset="1"/>
			</LinearGradientBrush>
		</Border.Background>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- LEFT SIDEBAR -->
			<Border Grid.Column="0"
                    Background="#40000000"
                    CornerRadius="20,0,0,20"
                    Padding="20">
				<StackPanel>
					<!-- Logo -->
					<Border Background="#30FFFFFF"
                            CornerRadius="15"
                            Padding="15"
                            Margin="0,0,0,30">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="📚" FontSize="32" Margin="0,0,10,0"/>
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="Kinetic"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>
								<TextBlock Text="Bookstore"
                                         FontSize="12"
                                         Foreground="#C0FFFFFF"/>
							</StackPanel>
						</StackPanel>
					</Border>

					<!-- Active Menu Item -->
					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="📊" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Dashboard" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<!-- Menu Items -->
					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="📚" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Quản Lý Sách" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="💳" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Đơn Hàng" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="👥" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Khách Hàng" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="📈" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Thống Kê" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<Button Style="{StaticResource MenuButtonStyle}"
                            Margin="0,0,0,8">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="⚙️" FontSize="18" Margin="0,0,12,0"/>
							<TextBlock Text="Cài Đặt" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>

					<!-- Bottom Section -->
					<Border Background="#30FFFFFF"
                            CornerRadius="15"
                            Padding="15"
                            Margin="0,300,0,0"
                            VerticalAlignment="Bottom">
						<StackPanel>
							<TextBlock Text="👤 Admin User"
                                     Foreground="White"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
							<TextBlock Text="admin@bookstore.com"
                                     Foreground="#A0FFFFFF"
                                     FontSize="11"/>
						</StackPanel>
					</Border>
				</StackPanel>
			</Border>

			<!-- MAIN CONTENT -->
			<Grid Grid.Column="1" Margin="30">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<!-- HEADER -->
				<Grid Grid.Row="0" Margin="0,0,0,30">
					<StackPanel>
						<TextBlock Text="Dashboard"
                                 Style="{StaticResource TitleTextStyle}"
                                 Foreground="White"/>
						<TextBlock Text="Chào mừng trở lại! 👋"
                                 Style="{StaticResource SubtitleTextStyle}"
                                 Foreground="#E0FFFFFF"
                                 Margin="0,5,0,0"/>
					</StackPanel>

					<!-- Window Controls -->
					<StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Right">
						<Button Style="{StaticResource IconButtonStyle}"
                              Margin="0,0,10,0">
							<TextBlock Text="🔔" FontSize="18"/>
						</Button>
						<Button Style="{StaticResource IconButtonStyle}"
                              Margin="0,0,10,0">
							<TextBlock Text="👤" FontSize="18"/>
						</Button>
						<Button Style="{StaticResource IconButtonStyle}"
                              Click="MinimizeWindow">
							<TextBlock Text="─" FontSize="16" Foreground="White"/>
						</Button>
						<Button Style="{StaticResource IconButtonStyle}"
                              Margin="10,0,0,0"
                              Click="CloseWindow">
							<TextBlock Text="✕" FontSize="16" Foreground="White"/>
						</Button>
					</StackPanel>
				</Grid>

				<!-- STAT CARDS -->
				<Grid Grid.Row="1" Margin="0,0,0,30">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!-- Card 1 - Purple -->
					<Border Grid.Column="0"
                            Style="{StaticResource StatCardStyle}"
                            Background="{StaticResource CardGradient1}"
                            Margin="0,0,15,0">
						<Grid>
							<StackPanel>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
									<Border Background="White"
                                          Width="40" Height="40"
                                          CornerRadius="10"
                                          Padding="8">
										<TextBlock Text="👤" FontSize="20" TextAlignment="Center"/>
									</Border>
									<TextBlock Text="+15"
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="Auto,0,0,0"/>
								</StackPanel>

								<TextBlock Text="Ngọc Phan"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,0,5"/>
								<TextBlock Text="Quản lý kho"
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         Margin="0,0,0,15"/>

								<TextBlock Text="$31,28"
                                         Style="{StaticResource PriceTextStyle}"
                                         Margin="0,0,0,5"/>
							</StackPanel>

							<Button Style="{StaticResource IconButtonStyle}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Background="White"
                                  BorderThickness="0"
                                  Width="35" Height="35">
								<TextBlock Text="🎁" FontSize="16"/>
							</Button>
						</Grid>
					</Border>

					<!-- Card 2 - Blue -->
					<Border Grid.Column="1"
                            Style="{StaticResource StatCardStyle}"
                            Background="{StaticResource CardGradient2}"
                            Margin="0,0,15,0">
						<Grid>
							<StackPanel>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
									<Border Background="White"
                                          Width="40" Height="40"
                                          CornerRadius="10"
                                          Padding="8">
										<TextBlock Text="💼" FontSize="20" TextAlignment="Center"/>
									</Border>
									<TextBlock Text="+9"
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="Auto,0,0,0"/>
								</StackPanel>

								<TextBlock Text="Phạm Tùng"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,0,5"/>
								<TextBlock Text="Nhân viên bán hàng"
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         Margin="0,0,0,15"/>

								<TextBlock Text="$3,25"
                                         Style="{StaticResource PriceTextStyle}"
                                         Margin="0,0,0,5"/>
							</StackPanel>

							<Button Style="{StaticResource IconButtonStyle}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Background="White"
                                  BorderThickness="0"
                                  Width="35" Height="35">
								<TextBlock Text="🎁" FontSize="16"/>
							</Button>
						</Grid>
					</Border>

					<!-- Card 3 - Soft Blue -->
					<Border Grid.Column="2"
                            Style="{StaticResource StatCardStyle}"
                            Background="{StaticResource CardGradient3}"
                            Margin="0,0,15,0">
						<Grid>
							<StackPanel>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
									<Border Background="White"
                                          Width="40" Height="40"
                                          CornerRadius="10"
                                          Padding="8">
										<TextBlock Text="📚" FontSize="20" TextAlignment="Center"/>
									</Border>
									<TextBlock Text="+11"
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="Auto,0,0,0"/>
								</StackPanel>

								<TextBlock Text="Nguyễn Hải"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,0,5"/>
								<TextBlock Text="Thủ kho"
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         Margin="0,0,0,15"/>

								<TextBlock Text="$3,10"
                                         Style="{StaticResource PriceTextStyle}"
                                         Margin="0,0,0,5"/>
							</StackPanel>

							<Button Style="{StaticResource IconButtonStyle}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Background="White"
                                  BorderThickness="0"
                                  Width="35" Height="35">
								<TextBlock Text="🎁" FontSize="16"/>
							</Button>
						</Grid>
					</Border>

					<!-- Card 4 - Pink -->
					<Border Grid.Column="3"
                            Style="{StaticResource StatCardStyle}"
                            Background="{StaticResource CardGradient4}">
						<Grid>
							<StackPanel>
								<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
									<Border Background="White"
                                          Width="40" Height="40"
                                          CornerRadius="10"
                                          Padding="8">
										<TextBlock Text="📦" FontSize="20" TextAlignment="Center"/>
									</Border>
									<TextBlock Text="+3"
                                             FontSize="14"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="Auto,0,0,0"/>
								</StackPanel>

								<TextBlock Text="Minh Tú"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,0,5"/>
								<TextBlock Text="Giao hàng"
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         Margin="0,0,0,15"/>

								<TextBlock Text="$3,75"
                                         Style="{StaticResource PriceTextStyle}"
                                         Margin="0,0,0,5"/>
							</StackPanel>

							<Button Style="{StaticResource IconButtonStyle}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Background="White"
                                  BorderThickness="0"
                                  Width="35" Height="35">
								<TextBlock Text="🎁" FontSize="16"/>
							</Button>
						</Grid>
					</Border>
				</Grid>

				<!-- MAIN CONTENT AREA -->
				<Grid Grid.Row="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!-- Chart Section -->
					<Border Grid.Column="0"
                            Style="{StaticResource GlassCardStyle}"
                            Margin="0,0,15,0">
						<StackPanel>
							<Grid Margin="0,0,0,20">
								<TextBlock Text="Thống Kê Doanh Thu"
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="White"/>
								<Button Style="{StaticResource IconButtonStyle}"
                                      HorizontalAlignment="Right"
                                      Width="35" Height="35">
									<TextBlock Text="⋮" FontSize="18" Foreground="White"/>
								</Button>
							</Grid>

							<!-- Chart Placeholder -->
							<Border Height="250"
                                  Background="#20FFFFFF"
                                  CornerRadius="15">
								<TextBlock Text="📊 Biểu đồ sẽ hiển thị ở đây"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="#A0FFFFFF"
                                         FontSize="16"/>
							</Border>
						</StackPanel>
					</Border>

					<!-- Right Panel -->
					<Border Grid.Column="1"
                            Style="{StaticResource GlassCardStyle}">
						<StackPanel>
							<TextBlock Text="Thông Tin Nhanh"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     Margin="0,0,0,20"/>

							<Border Background="#20FFFFFF"
                                  CornerRadius="12"
                                  Padding="15"
                                  Margin="0,0,0,15">
								<StackPanel>
									<TextBlock Text="📚 Tổng Sách"
                                             Foreground="White"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
									<TextBlock Text="1,248"
                                             Foreground="White"
                                             FontSize="24"
                                             FontWeight="Bold"/>
								</StackPanel>
							</Border>

							<Border Background="#20FFFFFF"
                                  CornerRadius="12"
                                  Padding="15"
                                  Margin="0,0,0,15">
								<StackPanel>
									<TextBlock Text="👥 Khách Hàng"
                                             Foreground="White"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
									<TextBlock Text="856"
                                             Foreground="White"
                                             FontSize="24"
                                             FontWeight="Bold"/>
								</StackPanel>
							</Border>

							<Border Background="#20FFFFFF"
                                  CornerRadius="12"
                                  Padding="15">
								<StackPanel>
									<TextBlock Text="💰 Doanh Thu"
                                             Foreground="White"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
									<TextBlock Text="$45,678"
                                             Foreground="White"
                                             FontSize="24"
                                             FontWeight="Bold"/>
								</StackPanel>
							</Border>
						</StackPanel>
					</Border>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</Window>